<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_cardlist_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/cardlist_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/cardvip_set" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom" >

            <ImageView
                android:id="@+id/iv_card_set_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_set_save" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- 等级按钮 -->

        <Button
            android:id="@+id/btn_card_set_gd"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-5dp"
            android:background="@drawable/shape_btncardset"
            android:focusable="true"
            android:text="@string/cardvip_set_btn_grade"
            android:textColor="#3333CC" />
        <!-- 积分按钮 -->

        <Button
            android:id="@+id/btn_card_set_igl"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btncardset"
            android:focusable="true"
            android:text="@string/cardvip_set_btn_integeral"
            android:textColor="#3333CC" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:id="@+id/ly_card_set_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>