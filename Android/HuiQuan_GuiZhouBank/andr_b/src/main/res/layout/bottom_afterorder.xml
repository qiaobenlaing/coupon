<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <LinearLayout
        android:id="@+id/ly_after_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:gravity="center|left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="新家菜品" />

            <TextView
                android:id="@+id/tv_afterorder_newAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="(2个商品)"
                android:textColor="@color/red" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_afterorder_new_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:scrollbars="none"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_afterorder_line_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:background="@color/white" >

            <CheckBox
                android:id="@+id/ck_afterorder_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:button="@drawable/radio_no"
                android:checked="false" />

            <TextView
                android:id="@+id/tv_afterorder_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ck_afterorder_all"
                android:text="全选" />

            <TextView
                android:id="@+id/tv_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_afterorder_all"
                android:text="(请勾选已消费的菜品)"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            style="@style/VLine"
            android:layout_height="0.5dp"
            android:background="@color/shallow_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="消费金额" />

            <TextView
                android:id="@+id/tv_aftetorder_orderamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="42.00元" />
        </RelativeLayout>

        <TextView
            style="@style/VLine"
            android:layout_height="0.5dp"
            android:background="@color/shallow_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:background="@color/white" >

            <TextView
                android:id="@+id/tv_myafterorder_hand"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="手动输入" />

            <EditText
                android:id="@+id/et_myafterorder_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_myafterorder_yuan"
                android:layout_toRightOf="@+id/tv_myafterorder_hand"
                android:background="@drawable/sel_edt_input"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/coupon_hometopfont"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_myafterorder_yuan"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="元" />
        </RelativeLayout>

        <TextView
            style="@style/VLine"
            android:layout_height="0.5dp"
            android:background="@color/shallow_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/btn_myafterorder_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bar"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_border_red"
                android:text="提交"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_myafterorder_wait"
                android:layout_width="160dp"
                android:layout_height="@dimen/navigation_bar"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_border_gray"
                android:enabled="false"
                android:text="等待支付"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_myafterorder_update"
                android:layout_width="160dp"
                android:layout_height="@dimen/navigation_bar"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_border_red"
                android:text="修改价格"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_myafterorder_payok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bar"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_border_red"
                android:text="支付完成"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>