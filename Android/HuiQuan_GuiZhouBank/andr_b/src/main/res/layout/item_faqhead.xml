<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ry_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:background="@color/red"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_mypos_faq_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navigation_left"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/backup" />

        <TextView
            style="@style/LyWHSecond"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/pos_problem"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>