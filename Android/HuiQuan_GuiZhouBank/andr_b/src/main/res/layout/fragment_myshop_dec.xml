<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEE"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/NavigationTopBar"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_myshop_dec_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/backup" />

        <TextView
            style="@style/LyWHSecond"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/shop_dec"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_addall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/navigation_right"
            android:text="保存"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_image_show"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_edit_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/iv_image_show"
                    android:background="#80FFFFFF"
                    android:gravity="center"
                    android:text="@string/edit_picture"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/publicity_pictures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/publicity_pictures"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/publicity_pictures"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" >

                    <LinearLayout
                        android:id="@+id/picList1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_add_image1"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:background="@drawable/activityimage"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_add_image2"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/activityimage"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_add_image3"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/activityimage"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/picList2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/picList1"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_add_image4"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:background="@drawable/activityimage"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_add_image5"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/activityimage"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_add_image6"
                            android:layout_width="95dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/addphoto"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/shop_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/shop_intro"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_shopintro"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shop_intro"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sel_edt_input"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:singleLine="true"
                    android:text="111" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>