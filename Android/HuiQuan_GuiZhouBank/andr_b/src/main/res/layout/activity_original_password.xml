<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet"
    android:background="@color/app_bg" >

    <include layout="@layout/common_title_home" />

    <LinearLayout
        style="@style/LyWHFourth"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/textview"
            android:text="@string/upp_pwd"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
           	android:layout_height="@dimen/navigation_bar"
           	android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_passwoed"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:text="@string/original_pwd"
            android:textColor="@color/deep_grey"
            android:textSize="16sp"/>
        

        <EditText
            android:id="@+id/et_original_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_passwoed"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:layout_centerVertical="true" />

        <CheckBox
            android:id="@+id/ck_original_showpassword"
            android:layout_width="20dp"
	        android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:button="@drawable/sel_loginpass_state"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_bar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="right|center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_forget_pwd"
            style="@style/LyWHSecond"
            android:layout_marginRight="10dp"
            android:text="@string/forget_pwd"
            android:textColor="@color/tv_forget_pwd"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>