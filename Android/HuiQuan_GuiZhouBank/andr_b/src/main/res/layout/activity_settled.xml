<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tv_settled_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settled_open"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_settled_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:text="@string/settled_shop"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_settled_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:gravity="center"
            android:text="@string/settled_phone"
            android:textColor="@color/coupon_hometopfont" />
    </LinearLayout>

</LinearLayout>