<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <LinearLayout
        style="@style/LyWHSecond"
        android:background="@drawable/queybg"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/LyWHSecond"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/LyWHSecond"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/query_nosel"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_order_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_cardquery"
                android:gravity="center"
                android:text="@string/order_month"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_order_season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_cardquery"
                android:gravity="center"
                android:text="@string/order_season"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_order_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_cardquery"
                android:gravity="center"
                android:text="@string/order_year"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>