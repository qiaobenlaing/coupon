<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/title_fragment_home" />

    <RelativeLayout
        android:id="@+id/ry_access_count"
        style="@style/LyWHFourth"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/iv_access_logo"
                style="@style/LyWHSecond"
                android:background="@drawable/total_pageviews" />

            <TextView
                android:id="@+id/tv_access_count"
                style="@style/LyWHSecond"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />

            <TextView
                style="@style/LyWHSecond"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="总浏览量" />
        </LinearLayout>

        <ImageView
            style="@style/imageview"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shop_arrow" />
    </RelativeLayout>

    <LinearLayout
        style="@style/LyWHFourth"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="0.5dp"
        android:paddingVertical="15dp">

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rbtn_homecard"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_scanpay"/>

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/receivables"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rbtn_homecoupon"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_verificationcode" />

            <TextView
                style="@style/LyWHSecond"
                android:text="验券"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/rbtn_cashier"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_cashier" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/my_cashier"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <RelativeLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/fl_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <ImageView
                    android:id="@+id/rbtn_msg"
                    style="@style/LyWHSecond"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_msg" />

                <TextView
                    android:id="@+id/tv_allprompt"
                    style="@style/LyWHSecond"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_red_round"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                style="@style/LyWHSecond"
                android:layout_below="@+id/fl_msg"
                android:layout_centerHorizontal="true"
                android:text="@string/mymsg"
                android:textColor="@color/home_topsixfont" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/LyWHFourth"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="0.5dp"
        android:paddingVertical="15dp">

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/rbtn_marketact"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_marketact" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/marker_act"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rbtn_audit"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_audit" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/post_accntstat"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rbtn_order"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_order" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/my_order"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>