<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/iv_weixin_good_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wx_good_f" />

    <TextView
        android:id="@+id/tv_weixin_good_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_weixin_good_f"
        android:layout_marginLeft="4dp"
        android:gravity="center_horizontal"
        android:text="@string/tv_weixin_good_f" />

    <ImageView
        android:id="@+id/iv_weixin_circle_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/iv_weixin_good_f"
        android:background="@drawable/wx_circle_f" />

    <TextView
        android:id="@+id/tv_weixin_circle_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_weixin_circle_f"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_weixin_good_f"
        android:text="@string/tv_weixin_circle_f" />

</RelativeLayout>