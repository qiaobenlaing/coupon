<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFirst"
    android:background="@color/shop_photo_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_layout">

    <RelativeLayout
        style="@style/LyWHFourth"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/cardbg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialgo_title"
            style="@style/LyWHSecond"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="温馨提示"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_line"
            style="@style/LyWHFourth"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_dialgo_title"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:background="@color/red" />

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:text="您确定要取消关注吗"
            android:textSize="16sp"
            android:maxLines="10"
            android:scrollbars="vertical"/>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_below="@+id/tv_dialog_content"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_ok"
                style="@style/LyWHSecond"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/bg_myred_border"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>