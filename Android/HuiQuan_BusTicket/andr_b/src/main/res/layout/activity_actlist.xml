<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <RelativeLayout
        android:id="@+id/aclist_fragmentRoot"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_actlist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/backup" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" >

            <RadioGroup
                android:id="@+id/rg_coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:orientation="horizontal" >

                <!-- 活动按钮 -->

                <RadioButton
                    android:id="@+id/btn_aclist_content"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector_radio_left"
                    android:button="@null"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/tv_actlist_activity"
                    android:textColor="@drawable/selector_radio_checked_font" />

                <!-- 红包按钮 -->

                <RadioButton
                    android:id="@+id/btn_aclist_money"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selector_radio_right"
                    android:button="@null"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/tv_actlist_activitymoney"
                    android:textColor="@drawable/selector_radio_checked_font" />
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_actlist_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:src="@drawable/act_add" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_actlist_add"
            android:layout_marginTop="5dp"
            android:background="#000" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_aclist_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>