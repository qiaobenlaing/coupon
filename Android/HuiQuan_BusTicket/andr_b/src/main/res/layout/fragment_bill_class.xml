<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyCommSet" >

    <include layout="@layout/common_title_order_scan" />
    
    <RelativeLayout 
        android:id="@+id/rl_bill_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_bill_select"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@string/tv_bill_select"
            android:background="@drawable/bg_border_red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/tv_bill_select">

            <EditText
                android:id="@+id/et_bill_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:background="@null"
                android:hint="@string/tv_bill_input"/>

            <TextView style="@style/VLine"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期："
                    android:textColor="@color/gray"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/b_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="至"/>

                <Button
                    android:id="@+id/b_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
        
    </RelativeLayout>
    
    <TextView style="@style/VLine"/>
    
    <LinearLayout
        android:id="@+id/ly_bill_billpay" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView 
                android:id="@+id/tv_billclass_liquidationdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:text="@string/tv_billclass_liquidationdate"/>
            
            <TextView 
                android:id="@+id/tv_bill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_toRightOf="@+id/tv_billclass_liquidationdate"
                android:layout_centerVertical="true"
                android:text=""/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView 
                android:id="@+id/tv_billclass_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:text="@string/tv_billclass_platform"/>
            
            <TextView 
                android:id="@+id/tv_bill_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_toRightOf="@+id/tv_billclass_platform"
                android:layout_centerVertical="true"
                android:text=""/>
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ly_bill_subsidy" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView 
                android:id="@+id/tv_billclass_subsidydata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:text="@string/tv_billtoday_subsidydata"/>
            
            <TextView 
                android:id="@+id/tv_bill_subsidydata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_toRightOf="@+id/tv_billclass_subsidydata"
                android:layout_centerVertical="true"
                android:text=""/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView 
                android:id="@+id/tv_billclass_subsidymoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:text="@string/tv_billtoday_subsidymoney"/>
            
            <TextView 
                android:id="@+id/tv_bill_subsidymoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_toRightOf="@+id/tv_billclass_subsidymoney"
                android:layout_centerVertical="true"
                android:text=""/>
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linear_bill_content"
        style="@style/LyWHFirst"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>