<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/ly_campaign_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height">
        <TextView 
            android:id="@+id/tv_camapginfree_title"
            android:layout_width="match_parent"	
            android:layout_height="@dimen/layout_height"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="规格1"/>
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height">
        <EditText 
            android:id="@+id/et_camapignfree_type"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_border_one"
            android:textSize="14sp"
            android:focusable="true"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:hint="@string/campaign_free_hini"/>
        <EditText 
            android:id="@+id/et_camapignfree_money"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_border_one"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:hint="@string/campaign_free_money"/>
    </RelativeLayout>
    
    </LinearLayout>
    
    <TextView style="@style/VLineAdd"/>

</LinearLayout>
