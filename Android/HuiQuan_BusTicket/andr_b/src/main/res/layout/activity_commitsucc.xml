<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/shopinfo_detail"
            android:textColor="@color/coupon_hometopfont"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_commitsucc_login"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navigation_bar"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_btn"
            android:text="@string/shopinfo_back"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_commitsucc_home"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navigation_bar"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_btn"
            android:text="@string/shopinfo_home"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>