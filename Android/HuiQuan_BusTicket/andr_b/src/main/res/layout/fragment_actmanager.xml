<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet"
    android:background="@color/bgall">

    <include layout="@layout/common_title_commit" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="none">

        <LinearLayout
            style="@style/LyWHFirst"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_nodate"
                style="@style/LyWHFirst"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/prog_nodata"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在加载数据" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_content"
                style="@style/LyWHFourth"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly_activity"
                    style="@style/LyWHFourth"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_act_image"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/tv_act_content"
                            style="@style/LyWHSecond"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/act_published"
                            android:textColor="@color/white" />

                        <TextView
                            style="@style/LyWHFourth"
                            android:layout_height="36dp"
                            android:layout_gravity="bottom"
                            android:background="@color/act_title_bg"
                            android:textColor="@color/white" />
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_act_status"
                            style="@style/LyWHSecond"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_border_act" />

                        <TextView
                            android:id="@+id/tv_act_sign_status"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_border_act" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView style="@style/VLine" />

                <TextView
                    style="@style/VSpace_one"
                    android:background="@color/bgall" />

                <RelativeLayout
                    style="@style/LyWHFourth"
                    android:layout_height="48dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_read"
                        style="@style/LyWHSecond"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="45dp"
                        android:background="@drawable/read" />

                    <TextView
                        android:id="@+id/tv_read_num"
                        style="@style/LyWHSecond"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_read"
                        android:text="xxxx" />

                    <TextView
                        style="@style/LyWHSecond"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_read_num"
                        android:text="@string/act_read" />

                    <TextView
                        android:id="@+id/tv_segment"
                        android:layout_width="1dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@color/gray_version" />

                    <ImageView
                        android:id="@+id/iv_collect"
                        style="@style/LyWHSecond"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_collect_num"
                        android:background="@drawable/collect" />

                    <TextView
                        android:id="@+id/tv_collect_num"
                        style="@style/LyWHSecond"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_collect"
                        android:text="xxxx" />

                    <TextView
                        android:id="@+id/tv_collect"
                        style="@style/LyWHSecond"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="45dp"
                        android:text="@string/act_collect" />
                </RelativeLayout>

                <TextView style="@style/VLine" />

                <TextView
                    style="@style/VSpace_one"
                    android:background="@color/bgall" />

                <TextView style="@style/VLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/shape_divider"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <RelativeLayout
                        android:id="@+id/ry_predetermined_list"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_sheight"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            style="@style/textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/predetermined_list" />

                        <ImageView
                            style="@style/imageview"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shop_arrow" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ry_share_friend"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_sheight"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:visibility="gone">

                        <TextView
                            style="@style/textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/share_friend" />
                    </RelativeLayout>
                    <!-- 		          <RelativeLayout
                                            android:id="@+id/ry_activity_verification"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/layout_sheight"
                                            android:background="@color/white"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal"
                                            android:paddingLeft="10dp">
                                            <TextView
                                                style="@style/textview"
                                                android:layout_alignParentLeft="true"
                                                android:layout_marginTop="10dp"
                                                android:layout_centerVertical="true"
                                                android:text="@string/activity_verification" />
                                             <ImageView
                                                style="@style/imageview"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerInParent="true"
                                                android:src="@drawable/shop_arrow" />
                                      </RelativeLayout>
                     -->                  <TextView
                    style="@style/VSpace_one"
                    android:background="@color/bgall" />

                    <RelativeLayout
                        android:id="@+id/ry_activity_edit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_sheight"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/tv_editact"
                            style="@style/textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/activity_edit" />

                        <ImageView
                            android:id="@+id/iv_arrow"
                            style="@style/imageview"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shop_arrow" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ry_del_activity"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_sheight"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/tv_delact"
                            style="@style/textview"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/activity_del" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_release_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/navigation_bar"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/login_btn"
                        android:text="@string/act_release"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>