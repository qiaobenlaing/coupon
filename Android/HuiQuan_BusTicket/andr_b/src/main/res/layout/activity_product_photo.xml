<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet"
    android:orientation="vertical" >

    <RelativeLayout style="@style/NavigationTopBar" >

        <LinearLayout
            android:id="@+id/layout_turn_in"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/backup"
                android:visibility="visible" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_mid_content"
            style="@style/LyWHSecond"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:enabled="false"
            android:text="@string/mainact_shopname"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/navigation_right"
            android:gravity="center_vertical|right"
            android:text="@string/person_submit"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_nodate"
        style="@style/LyWHFirst"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/prog_nodata"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载数据" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ry_content"
        style="@style/LyWHFourth"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_nodata"
            style="@style/LyWHFourth"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/no_picture"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_upload_photo"
            android:layout_width="250dp"
            android:layout_height="@dimen/navigation_bar"
            android:layout_below="@+id/tv_nodata"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_btn_red"
            android:gravity="center"
            android:text="@string/upload_picture" />

        <GridView
            android:id="@+id/gv_photo_product"
            style="@style/LyWHFourth"
            android:layout_below="@+id/tv_upload_photo"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />
    </RelativeLayout>

</LinearLayout>