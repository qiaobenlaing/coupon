<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            
            <ImageView 
                android:id="@+id/iv_bill_customer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:background="@drawable/bg_border"
                android:layout_gravity="center"
                android:src="@drawable/no_portrait"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            
            <!-- 昵称 手机号 -->
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    
                    <TextView
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billtoday_customer"/>
                
                	<TextView
	                    android:id="@+id/tv_bill_customer" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:singleLine="true"
	                    android:text=""/>
                    
                </LinearLayout>
               
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
					android:visibility="gone">
                    
                    <TextView 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billtoday_phone"/>
                
                	<TextView
	                    android:id="@+id/tv_bill_phone" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:singleLine="true"
	                    android:text=""/>
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <!-- 消费次数   消费金额   支付金额-->
            
            <LinearLayout 
                android:id="@+id/ly_bill_consumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:visibility="gone">
                
	            <LinearLayout 
	                android:id="@+id/ly_consumnumber"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:visibility="gone">
	                
	               <TextView 
	                    android:id="@+id/tv_billclass_consumnumber"
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billclass_consumnumber"/>
	                
	                <TextView
	                    android:id="@+id/tv_bill_consumnumber" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text=""/>
	                
	             </LinearLayout>
             
	            <LinearLayout 
	                android:id="@+id/ly_consummoney"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:visibility="gone">
	                
	                 <TextView 
	                    android:id="@+id/tv_billclass_consummoney"
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billclass_consummoney"/>
	                
	                <TextView
	                    android:id="@+id/tv_bill_consummoney" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text=""/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/ly_bill_paymoneyone"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:visibility="gone"
	                android:layout_weight="1">
	                
	               <TextView 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billclass_paymoney"/>
	                
	                <TextView
	                    android:id="@+id/tv_bill_paymoneyone" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text=""/>
	                
	             </LinearLayout>
	            
           
            </LinearLayout>
            
            <!-- 支付金额   优惠金额  退款金额   补贴金额-->
            
            <LinearLayout 
                android:id="@+id/ly_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:visibility="gone">
                
	            <LinearLayout 
	                android:id="@+id/ly_bill_paymoney"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:visibility="gone"
	                android:layout_weight="1">
	                
	               <TextView 
	                    android:id="@+id/tv_billclass_paymoney"
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billclass_paymoney"/>
	                
	                <TextView
	                    android:id="@+id/tv_bill_paymoney" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text=""/>
	                
	             </LinearLayout>
             
	            <LinearLayout 
	                android:id="@+id/ly_bill_discountmoney"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:visibility="gone"
	                android:layout_weight="1">
	                
	                 <TextView 
	                    android:id="@+id/tv_billclass_discountmoney"
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billclass_discountmoney"/>
	                
	                <TextView
	                    android:id="@+id/tv_bill_discountmoney" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text=""/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/ly_refund"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:visibility="gone">
	                
	                 <TextView 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billclass_refund"/>
	                
	                <TextView
	                    android:id="@+id/tv_bill_refundone" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text=""/>
	            </LinearLayout>
	            
	            <LinearLayout 
	                android:id="@+id/ly_subsidy"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:visibility="gone">
	                
	                 <TextView 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text="@string/tv_billtoday_subsidy"/>
	                
	                <TextView
	                    android:id="@+id/tv_bill_subsidy" 
	                    style="@style/BillText"
	                    android:gravity="center"
	                    android:text=""/>
	            </LinearLayout>
           
            </LinearLayout>
            
            <!-- 最后消费时间 -->
            <RelativeLayout 
                android:id="@+id/rl_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:visibility="gone">
                
                <TextView 
                    android:id="@+id/tv_billtoday_date"
                    style="@style/BillText"
                    android:text="@string/tv_billtoday_date"/>
	                
                <TextView
                    android:id="@+id/tv_bill_date" 
                    style="@style/BillText"
                    android:layout_toRightOf="@+id/tv_billtoday_date"
                    android:text=""/>
            </RelativeLayout>
            
            <!-- 消费时间 -->
            <RelativeLayout 
                android:id="@+id/rl_consumptiondate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:visibility="gone">
                
                <TextView 
                    android:id="@+id/tv_billtoday_dateone"
                    style="@style/BillText"
                    android:text="@string/tv_billtoday_dateone"/>
	                
                <TextView
                    android:id="@+id/tv_bill_dateone" 
                    style="@style/BillText"
                    android:layout_toRightOf="@+id/tv_billtoday_dateone"
                    android:text=""/>
            </RelativeLayout>
            
            <!-- 退款时间 -->
            
            <RelativeLayout 
                android:id="@+id/rl_refunddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:visibility="gone">
                
                <TextView 
                    android:id="@+id/tv_billtoday_refunddate"
                    style="@style/BillText"
                    android:text="@string/tv_billtoday_refunddate"/>
	                
                <TextView
                    android:id="@+id/tv_bill_refunddate" 
                    style="@style/BillText"
                    android:layout_toRightOf="@+id/tv_billtoday_refunddate"
                    android:text=""/>
            </RelativeLayout>
            
            <!-- 订单号-->
            
            <RelativeLayout 
                android:id="@+id/rl_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:visibility="gone">
                
                <TextView 
                    android:id="@+id/tv_billtoday_order"
                    style="@style/BillText"
                    android:text="@string/tv_billtoday_order"/>
	                
                <TextView
                    android:id="@+id/tv_bill_order" 
                    style="@style/BillText"
                    android:layout_toRightOf="@+id/tv_billtoday_order"
                    android:text=""/>
            </RelativeLayout>
            
        </LinearLayout>
        
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>
