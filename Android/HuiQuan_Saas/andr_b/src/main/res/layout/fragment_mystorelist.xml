<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgall"
    android:orientation="vertical">

    <include layout="@layout/common_title_commit" />
    
    <FrameLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         
         <android.support.v4.widget.SwipeRefreshLayout
	        android:id="@+id/index_swipe_refresh"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="visible" >
		    <com.huift.hfq.base.view.XListView
                android:id="@+id/lv_mystorelist_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg"
                android:cacheColorHint="#000000"
                android:divider="@color/shopdetail_divider"
                android:dividerHeight="0.5px"
                android:scrollbars="none"
                android:visibility="visible" />
	    </android.support.v4.widget.SwipeRefreshLayout>
	
	    <include layout="@layout/comm_no_data" />
	    
    </FrameLayout>

</LinearLayout>