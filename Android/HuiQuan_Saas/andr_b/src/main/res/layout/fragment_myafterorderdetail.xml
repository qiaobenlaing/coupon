<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet">
    
     <include layout="@layout/common_title_order" />
     
     <ScrollView
        android:id="@+id/sv_actdetail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:orientation="horizontal">
             <LinearLayout 
                 android:id="@+id/ly_after_heand"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"
                 android:background="@color/after_order_yellow"
                 android:visibility="gone"
                 android:gravity="center">
	             <TextView 
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="请在今天"/>
	             <TextView 
	                 android:id="@+id/tv_afterorder_time"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:textColor="@color/red"
	                 android:text="00:00"/>
	             <TextView 
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="前确认订单"/>
             </LinearLayout>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="@dimen/layout_height"
             android:gravity="center"
             android:background="@color/white"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="22dp"
                 android:text="餐号："/>
             <TextView
                 android:id="@+id/tv_afterorder_mealnbr" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="22dp"
                 android:text="xxx"/>
         </LinearLayout>
         <TextView
              style="@style/VLine"
              android:layout_height="0.5dp"
              android:background="@color/shallow_gray" />
          <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center|left"
             android:background="@color/white"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/coupon_hometopfont"
                 android:text="订单类型："/>
             <TextView 
                 android:id="@+id/tv_afterorder_ordertype"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center|left"
             android:background="@color/white"
             android:paddingBottom="10dp"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/coupon_hometopfont"
                 android:text="支付状态："/>
             <TextView 
                 android:id="@+id/tv_afterorder_pay"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center|left"
             android:paddingBottom="10dp"
             android:background="@color/white"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/coupon_hometopfont"
                 android:text="用户："/>
             <TextView 
                 android:id="@+id/tv_afterorder_clientcode"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center|left"
             android:paddingBottom="10dp"
             android:background="@color/white"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/coupon_hometopfont"
                 android:text="电话："/>
             <TextView 
                 android:id="@+id/tv_afterorder_receivermobileNbr"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center|left"
             android:paddingBottom="10dp"
             android:background="@color/white"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/coupon_hometopfont"
                 android:text="下单时间："/>
             <TextView 
                 android:id="@+id/tv_afterorder_ordertime"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center|left"
             android:paddingBottom="10dp"
             android:background="@color/white"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/coupon_hometopfont"
                 android:text="下单号："/>
             <TextView
                 android:id="@+id/tv_afterorder_ordernbr" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"/>
         </LinearLayout>
         
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="@dimen/layout_height"
             android:gravity="center|left"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:text="订单详情"/>
             <TextView 
                 android:id="@+id/tv_afterorder_orderproductamount"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/red"
                 android:text="(0个商品)"/>
         </LinearLayout>
         
         <ListView
	        android:id="@+id/lv_afterorder_list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="gone"
	        android:scrollbars="none"
	        android:cacheColorHint="#00000000"/>
         
         <LinearLayout 
             android:id="@+id/ly_after_new"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="gone"
             android:orientation="vertical">
             <LinearLayout 
	             android:layout_width="match_parent"
	             android:layout_height="@dimen/layout_height"
	             android:gravity="center|left"
	             android:orientation="horizontal">
	             <TextView 
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="10dp"
	                 android:text="新加菜品"/>
	             <TextView 
	                 android:id="@+id/tv_afterorder_newAmount"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="10dp"
	                 android:textColor="@color/red"
	                 android:text="(2个商品)"/>
        	 </LinearLayout>
             
	         <ListView
		        android:id="@+id/lv_afterorder_new_list"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:scrollbars="none"
		        android:cacheColorHint="#00000000"/>
         </LinearLayout>
         
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="@dimen/layout_height"
             android:gravity="center|left"
             android:background="@color/white"
             android:orientation="horizontal">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:textColor="@color/coupon_hometopfont"
                 android:text="备注信息："/>
              <TextView 
                 android:id="@+id/tv_afterorder_remark"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"/>
         </LinearLayout>
         
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="30dp"/>
         
         <RelativeLayout 
             android:layout_width="match_parent"
             android:background="@color/white"
             android:layout_marginBottom="20dp"
             android:layout_height="@dimen/layout_height">
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="10dp"
                 android:text="实际支付"/>
             <TextView 
                 android:id="@+id/tv_aftetorder_orderamount"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="10dp"
                 android:textColor="@color/red"
                 android:text="00.00元"/>
         </RelativeLayout>
         
     </LinearLayout>
    </ScrollView>
</LinearLayout>
