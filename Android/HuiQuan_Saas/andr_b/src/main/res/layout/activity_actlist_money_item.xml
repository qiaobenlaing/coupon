<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgall"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_border"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_actmoney_image"
            android:layout_width="@dimen/layout_lheight"
            android:layout_height="@dimen/layout_lheight"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_border"
            android:src="@drawable/actlistmoney" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lheight"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_money_activityCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- 主题 -->

                <TextView
                    android:id="@+id/tv_actlist_money_Several"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="XXXXXXX"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_receiver_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/enroll_nomal"
                    android:gravity="center"
                    android:text="@string/tv_actlist_money"
                    android:textColor="@color/coupon_hometopfont" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <com.huift.hfq.base.utils.MyProgress
                    android:id="@+id/progress_horizontal"
                    style="@style/StyleProgressBarMini"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_progressbar_bg"
                    android:minWidth="100dp" />

                <TextView
                    android:id="@+id/tv_moneyreceiver_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/progress_horizontal"
                    android:singleLine="true"
                    android:text="已领取0%(0/0)" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>