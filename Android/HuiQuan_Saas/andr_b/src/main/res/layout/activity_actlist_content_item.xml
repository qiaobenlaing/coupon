<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgall"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_activityCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_xheight"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_border"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_aclistcontent_image"
            android:layout_width="@dimen/layout_lheight"
            android:layout_height="@dimen/layout_lheight"
            android:layout_gravity="center"
            android:background="@drawable/bg_border"
            android:scaleType="fitXY"
            android:src="@drawable/activityimage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <!-- 主题 -->

                <TextView
                    android:id="@+id/tv_aclist_theam"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="XXXXXXX"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_aclist_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/enroll_nomal"
                    android:gravity="center"
                    android:text="@string/tv_actlist_enterperson"
                    android:textColor="@color/coupon_hometopfont" />

                <!--
                <FrameLayout 
                    android:id="@+id/fl__act_msg"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                </FrameLayout>
                -->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 人数 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_actlist_people"
                    android:textColor="@color/coupon_hometopfont" />

                <TextView
                    android:id="@+id/tv_aclist_activitycount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/coupon_hometopfont" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_aclist_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YYYY"
                    android:textColor="@color/msg_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/tv_actlist_to"
                    android:textColor="@color/msg_font" />

                <TextView
                    android:id="@+id/tv_aclist_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="YYYY"
                    android:textColor="@color/msg_font" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>