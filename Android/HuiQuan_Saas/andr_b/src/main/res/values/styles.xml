<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="rButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="linaer_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rbt_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 垂直方向的空白空间 -->
    <style name="VSpace">
        <item name="android:background">@color/white</item>
        <!-- <item name="android:layout_height">16dp</item> -->
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <!-- 垂直方向的空白空间 -->
    <style name="VSpace_one">
        <item name="android:background">@color/white</item>
        <!-- <item name="android:layout_height">16dp</item> -->
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="VSpaceSmall">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="VLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/light_grey</item>
    </style>
    
    <style name="VLineAdd">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10px</item>
        <item name="android:background">@color/app_bg</item>
    </style>

    <!-- MassageFragment -->
    <style name="MsgBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <!-- comm -->
    <style name="LyWHFirst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LyWHSecond">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LyWHThird">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LyWHFourth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LyOutSet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/bgall</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="LyOutSet_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/bgall</item>
    </style>
    <!-- 头顶导航条 -->
    <style name="NavigationTopBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_bar</item>
        <item name="android:background">@color/red</item>
    </style>

    <!-- homefragment -->
    <style name="LyECsm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/coupon_fontgrey</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- couponListFragment -->
    <style name="tvCouponDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/home_topsixfont</item>
    </style>

    <!-- 会员卡等级显示界面 -->
    <style name="LyCradGradeSet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LyCradGradeSetRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="LyCradGradeImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="tvCradGrade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coupon_hometopfont</item>
    </style>

    <style name="IvCradGradeImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
    </style>
    <!-- 第一级会员卡的设置 CardGradeFirst -->
    <style name="LyCradGradeFirst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right|center</item>
        <item name="android:layout_marginRight">10sp</item>
    </style>
    <!-- 与会员交流界面 -->
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 对ImageView进行设置 -->
    <style name="imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 对TextView进行设置 -->
    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- cardhomefragment -->
    <style name="Tv_cardhome_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/coupon_hometopfont</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Ly_cardhome_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Tv_cardhome_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 优惠券设置 -->
    <style name="LyCoupon_setrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Edt_Couponset">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textColor">@color/home_topsixfont</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
    <!-- 查询界面字体 -->
    <style name="Tv_Font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coupon_fontgrey</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Tv_CouponTopFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coupon_hometopfont</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Tv_CouponSetFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/home_topsixfont</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 字体颜色和大小 -->
    <style name="Tv_FontSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coupon_fontgrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 进度条的设置 -->
    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <!-- 自定义对话框的样式 -->
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowBackground">@drawable/dialog_bg</item> -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 推荐好友 -->
    <style name="IvImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="TvHomeImge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="VLineV">
        <item name="android:layout_width">0.5px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_gray</item>
    </style>
    <!-- 新建活动 -->
    <style name="Edt_campaign">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:background">@null</item>
       <item name="android:textSize">14sp</item>
       <item name="android:layout_weight">1</item>
       <item name="android:singleLine">true</item>
       <item name="android:imeOptions">actionNext</item>
       <item name="android:textColor">@color/home_topsixfont</item>
   </style>
   <!-- 新建活动  高级设置-->
   <style name="Edt_campaign_number">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:background">@null</item>
       <item name="android:layout_gravity">center</item>
       <item name="android:textSize">14sp</item>
       <item name="android:layout_weight">1</item>
       <item name="android:singleLine">true</item>
       <item name="android:textColor">@color/home_topsixfont</item>
       <item name="android:inputType">number</item>
   </style>
   
   <style name="LyCommSet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/app_bg</item>
    </style>
    
   <style name="tvCircleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    
   <style name="VLineVCircle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
   <style name="BillText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/shop_nameother</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>