<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_shop_card"
            android:layout_width="370dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@drawable/login_logo1"
            android:contentDescription="@string/describtion_of_shopcard" />
    </LinearLayout>

    <TextView style="@style/VLine" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/LyWHFourth"
                    android:layout_weight="6"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_phone" />

                <EditText
                    android:id="@+id/edt_login_username"
                    style="@style/LyWHFourth"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/edt_hint_input_username"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    style="@style/LyWHFourth"
                    android:layout_weight="6"
                    android:background="@drawable/login_pwdsee"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView style="@style/VLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/LyWHFourth"
                    android:layout_weight="6.5"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_pwd" />

                <EditText
                    android:id="@+id/edt_login_password"
                    style="@style/LyWHFourth"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/edt_hint_input_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textSize="16sp" >
                </EditText>

                <CheckBox
                    android:id="@+id/tv_login_showpassword"
                    style="@style/LyWHFourth"
                    android:layout_weight="6.5"
                    android:background="@null"
                    android:button="@drawable/sel_loginpass_state"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pr_login_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView style="@style/VLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_bar"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_btn"
            android:text="@string/btn_login"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forget_pwd"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_frame"
                android:gravity="center"
                android:textColor="@color/red" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>