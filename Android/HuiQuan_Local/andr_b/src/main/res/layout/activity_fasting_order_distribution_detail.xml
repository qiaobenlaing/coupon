<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFirst"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_order" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/app_item_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ly_nodate"
                style="@style/LyWHFirst"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ProgressBar
                    android:id="@+id/prog_nodata"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在加载数据" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_content"
                style="@style/LyWHFourth"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:background="@color/sold_light_gray"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_refund_time"
                        style="@style/LyWHSecond"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/deep_red" />

                    <TextView
                        android:id="@+id/tv_refund_function"
                        style="@style/LyWHSecond"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/deep_grey" />

                    <TextView
                        android:id="@+id/tv_refundremark"
                        style="@style/LyWHSecond"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:layout_height="48dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/order_number"
                        style="@style/LyWHSecond"
                        android:textSize="22dp" />
                </LinearLayout>

                <TextView style="@style/VLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/fasting_order_type" />

                    <TextView
                        android:id="@+id/tv_pay_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/pay_status" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/user" />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/mycontact_number" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/myorder_time" />

                    <TextView
                        android:id="@+id/tv_ordernbr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/ordernbr" />
                </LinearLayout>

                <TextView style="@style/VLine" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:layout_height="24dp"
                    android:background="@color/app_bg" >

                    <TextView
                        style="@style/LyWHSecond"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="配送信息" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:layout_marginLeft="15dp"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_apply_receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="收货人:" />

                    <TextView
                        android:id="@+id/tv_apply_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="电话:" />

                    <TextView
                        android:id="@+id/tv_apply_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="地址:" />
                </LinearLayout>

                <TextView style="@style/VLine" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:layout_height="24dp"
                    android:background="@color/app_bg"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/LyWHSecond"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="@string/order_detail" />

                    <TextView
                        android:id="@+id/tv_count"
                        style="@style/LyWHSecond"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/red" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_fast_order_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:cacheColorHint="#00000000"
                    android:divider="@color/transparent"
                    android:scrollbars="none"
                    android:visibility="visible" >
                </ListView>

                <TextView style="@style/VLine" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/LyWHSecond"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:text="@string/remark_message" />

                    <TextView
                        android:id="@+id/tv_remark"
                        style="@style/LyWHSecond"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <TextView
                    style="@style/LyWHFourth"
                    android:layout_height="10dp"
                    android:background="@color/app_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/shape_divider"
                    android:orientation="vertical"
                    android:showDividers="middle" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:visibility="visible" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/csm_money" />

                        <TextView
                            android:id="@+id/price_unit"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="@string/money_unit"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ry_arrow_discount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/total_ddtmoney" />

                        <TextView
                            android:id="@+id/tv_totalprice_unit"
                            style="@style/LyWHSecond"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/iv_arrow_down"
                            android:text="@string/money_unit"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_arrow_down"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ly_all_discount"
                        style="@style/LyWHFourth"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <RelativeLayout
                            android:id="@+id/ry_couponUtil"
                            style="@style/LyWHFourth"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp" >

                            <TextView
                                android:id="@+id/tv_coupon_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/coupon_dcmoney"
                                android:textColor="@color/calendar_font" />

                            <TextView
                                android:id="@+id/tv_insteadprice"
                                style="@style/LyWHSecond"
                                android:layout_marginLeft="2dp"
                                android:layout_toRightOf="@+id/tv_coupon_type"
                                android:textColor="@color/calendar_font" />

                            <TextView
                                android:id="@+id/tv_coupon_unit"
                                style="@style/LyWHSecond"
                                android:layout_alignParentRight="true"
                                android:text="@string/money_unit"
                                android:textColor="@color/calendar_font" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ry_bankcard_Util"
                            style="@style/LyWHFourth"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/bank_dcmoney"
                                android:textColor="@color/calendar_font" />

                            <TextView
                                android:id="@+id/tv_bankcardcard_unit"
                                style="@style/LyWHSecond"
                                android:layout_alignParentRight="true"
                                android:text="@string/money_unit"
                                android:textColor="@color/calendar_font" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/LyWHFourth"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/card_ddtmoney"
                                android:textColor="@color/calendar_font" />

                            <TextView
                                android:id="@+id/tv_cardprice_unit"
                                style="@style/LyWHSecond"
                                android:layout_alignParentRight="true"
                                android:text="@string/money_unit"
                                android:textColor="@color/calendar_font" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/LyWHFourth"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/bouns_shop"
                                android:textColor="@color/calendar_font" />

                            <TextView
                                android:id="@+id/tv_shop_bouns"
                                style="@style/LyWHSecond"
                                android:layout_alignParentRight="true"
                                android:text="@string/money_unit"
                                android:textColor="@color/calendar_font" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/LyWHFourth"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:paddingTop="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/huiquan_bouns"
                                android:textColor="@color/calendar_font" />

                            <TextView
                                android:id="@+id/tv_huiquan_bounds"
                                style="@style/LyWHSecond"
                                android:layout_alignParentRight="true"
                                android:text="@string/money_unit"
                                android:textColor="@color/calendar_font" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/pay_totalmoney"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_newprice_unit"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="@string/money_unit"
                            android:textColor="@color/burgundy"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>