<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fy_add_type"
        style="@style/LyWHSecond"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_one" >

        <ImageView
            android:id="@+id/iv_photo_title"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/no_data" />

        <TextView
            android:id="@+id/tv_productype_name"
            style="@style/LyWHSecond"
            android:layout_width="154dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#7f666666"
            android:gravity="center"
            android:text="aaa"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_photo_count"
            style="@style/LyWHSecond"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top|center"
            android:layout_margin="5dp"
            android:background="@drawable/shape_photo_count"
            android:gravity="center"
            android:text="ccc"
            android:textColor="@color/white" />
    </FrameLayout>

</LinearLayout>