<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/rl_camapigntype_line"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/layout_height">
        
        <CheckBox
             android:id="@+id/ck_campaigntype_item"
             style="@style/LyWHSecond"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_centerVertical="true"
             android:layout_alignParentLeft="true"
             android:visibility="visible"
             android:button="@drawable/radio_no"
             android:enabled="false"
             android:focusable="false"/>
        
        <TextView 
            android:id="@+id/tv_campaigntype_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/ck_campaigntype_item"
            android:textColor="@color/coupon_hometopfont"
            android:text="xx"/>
        
    </RelativeLayout>
    
    <TextView style="@style/VLine"/>

</LinearLayout>
