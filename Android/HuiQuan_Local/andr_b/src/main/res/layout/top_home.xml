<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFourth"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fy_shop_msg"
        style="@style/LyWHFourth"
        android:layout_height="24dp"
        android:background="@color/after_order_yellow"
        android:visibility="gone" >
        <TextView
            android:id="@+id/tv_shop_msg"
            style="@style/LyWHSecond"
            android:layout_marginLeft="5dp"
            android:focusable="true"
            android:ellipsize="marquee"
		    android:marqueeRepeatLimit="marquee_forever"
		    android:focusableInTouchMode="true"
		    android:scrollHorizontally="true" 
            android:singleLine="true"
            android:layout_gravity="center|left"
            android:textColor="@color/red" 
            android:layout_marginRight="25dp"/>
        <ImageView
            android:id="@+id/iv_del_prompt"
            style="@style/LyWHSecond"
            android:layout_gravity="right|center"
            android:layout_marginRight="5dp"
            android:background="@drawable/del_msg" />
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/ry_access_count"
        style="@style/LyWHFourth"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/iv_access_logo"
                style="@style/LyWHSecond"
                android:background="@drawable/total_pageviews" />

            <TextView
                android:id="@+id/tv_access_count"
                style="@style/LyWHSecond"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />

            <TextView
                style="@style/LyWHSecond"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="总浏览量" />
        </LinearLayout>

        <ImageView
            style="@style/imageview"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shop_arrow" />
    </RelativeLayout>

    <TextView style="@style/VLine" />

    <TextView
        style="@style/VSpaceSmall"
        android:layout_height="16dp" />

    <LinearLayout
        style="@style/LyWHFourth"
        android:background="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <!--
                 <RadioButton
                android:id="@+id/rbtn_homecard"
                style="@style/rbt_bottom"
                android:drawableTop="@drawable/home_card"
                android:textColor="@color/home_topsixfont"
                android:text="@string/card_home" />
            -->

            <ImageView
                android:id="@+id/rbtn_homecard"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_scanpay"/>

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/receivables"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <!--
                 <RadioButton
                android:id="@+id/rbtn_homecoupon"
                style="@style/rbt_bottom"
                android:drawableTop="@drawable/home_coupon"
                android:textColor="@color/home_topsixfont"
                android:text="@string/coupon_home" />
            -->

            <ImageView
                android:id="@+id/rbtn_homecoupon"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_verificationcode" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/identify_code"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/rbtn_cashier"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_cashier" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/my_cashier"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <RelativeLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/fl_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >

                <ImageView
                    android:id="@+id/rbtn_msg"
                    style="@style/LyWHSecond"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_msg" />

                <TextView
                    android:id="@+id/tv_allprompt"
                    style="@style/LyWHSecond"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_red_round"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_msg"
                style="@style/LyWHSecond"
                android:layout_below="@+id/fl_msg"
                android:layout_centerHorizontal="true"
                android:text="@string/mymsg"
                android:textColor="@color/home_topsixfont" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        style="@style/VSpaceSmall"
        android:layout_height="16dp"
        android:background="@color/white" />

    <LinearLayout
        style="@style/LyWHFourth"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rbtn_marketact"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_marketact" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/marker_act"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rbtn_audit"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_audit" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/post_accntstat"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rbtn_msg1"
                style="@style/LyWHSecond"
                android:scaleType="centerCrop"
                android:src="@drawable/home_order" />

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/my_order"
                android:textColor="@color/home_topsixfont" />
        </LinearLayout>

