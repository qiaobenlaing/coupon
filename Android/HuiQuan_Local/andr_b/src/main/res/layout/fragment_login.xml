<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_shop_card"
            android:layout_width="370dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/login_logo1" />
    </LinearLayout>

    <TextView style="@style/VLine" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/LyWHFourth"
                    android:layout_weight="6"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_phone" />

                <EditText
                    android:id="@+id/edt_login_username"
                    style="@style/LyWHFourth"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/edt_hint_input_username"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <TextView
                    style="@style/LyWHFourth"
                    android:layout_weight="6"
                    android:background="@drawable/login_pwdsee"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView style="@style/VLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/LyWHFourth"
                    android:layout_weight="6.5"
                    android:scaleType="centerInside"
                    android:src="@drawable/login_pwd" />

                <EditText
                    android:id="@+id/edt_login_password"
                    style="@style/LyWHFourth"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/edt_hint_input_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textSize="16sp" >
                </EditText>

                <CheckBox
                    android:id="@+id/tv_login_showpassword"
                    style="@style/LyWHFourth"
                    android:layout_weight="6.5"
                    android:background="@null"
                    android:button="@drawable/sel_loginpass_state"
                    android:clickable="true" />
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pr_login_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView style="@style/VLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_bar"
            android:background="@drawable/login_btn"
            android:text="@string/btn_login"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height" >

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/forget_pwd"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-30dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/login_title"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_register"
                android:background="@drawable/shop_arrow" />

            <TextView
                android:id="@+id/tv_settled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_settled"
                android:text="@string/login_settled"
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/iv_settled"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shop_arrow" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>