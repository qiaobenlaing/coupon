                <LinearLayout
                    style="@style/LyCradGradeSet"
                    android:background="@color/white" >

                    <TextView
                        style="@style/LyWHSecond"
                        android:layout_marginLeft="10dp"
                        android:text="@string/tv_cardvip_igl_valid"
                        android:textColor="@color/home_topsixfont"
                        android:textSize="@dimen/card_fontsize" />

                    <LinearLayout
                        style="@style/LyCradGradeFirst"
                        android:layout_marginLeft="10dp" >

                        <!-- 积分有效期 -->

                        <EditText
                            android:id="@+id/edt_card_gdvalid"
                            style="@style/LyWHFourth"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="@string/tv_cardvip_inputvalid"
                            android:inputType="number"
                            android:maxLength="9"
                            android:singleLine="true"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />

                        <TextView
                            style="@style/LyWHFourth"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="9"
                            android:text="@string/tv_cardvip_igl_month"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/VSpace"
                    android:background="@color/bgall" />

                <LinearLayout
                    style="@style/LyCradGradeSet"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/bgall"
                    android:gravity="center_horizontal" >

                    <Button
                        android:id="@+id/btn_card_laststep"
                        style="@style/LyWHFourth"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/smallbtn"
                        android:text="@string/coupon_last_step"
                        android:textColor="@color/white"
                        android:textSize="@dimen/card_fontsize" />

                    <Button
                        android:id="@+id/btn_card_save"
                        style="@style/LyWHFourth"
                        android:layout_weight="1"
                        android:background="@drawable/smallbtn"
                        android:text="@string/coupon_next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/card_fontsize" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>