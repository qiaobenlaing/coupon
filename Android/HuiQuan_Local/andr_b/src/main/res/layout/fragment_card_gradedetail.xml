<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_home" />

    <ScrollView
        style="@style/LyWHFourth"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/LyWHFourth"
            android:orientation="vertical" >

            <TextView
                style="@style/VSpace"
                android:background="@color/bgall" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/LyCradGradeSet"
                    android:background="@color/white" >

                    <!-- 每个等级对应的卡 -->

                    <TextView
                        android:id="@+id/tv_card_gd"
                        style="@style/Tv_CouponSetFont"
                        android:layout_marginLeft="10dp"
                        android:text="@string/cardvip_gd_1"
                        android:textSize="@dimen/card_fontsize" />

                    <LinearLayout style="@style/LyCradGradeFirst" >

                        <TextView
                            android:id="@+id/tv_cardname"
                            style="@style/Tv_CouponSetFont"
                            android:layout_marginRight="4dp"
                            android:text="@string/cardvip_gdcard"
                            android:textSize="@dimen/card_fontsize" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/VLine"
                    android:layout_height="0.5dp" />

                <LinearLayout
                    style="@style/LyCradGradeSet"
                    android:background="@color/white" >

                    <!-- 每个等级对应的卡 -->

                    <TextView
                        style="@style/Tv_CouponSetFont"
                        android:layout_marginLeft="10dp"
                        android:text="@string/cardvip_gdpoint"
                        android:textSize="@dimen/card_fontsize" />

                    <LinearLayout
                        style="@style/LyCradGradeFirst"
                        android:layout_marginLeft="20dp" >

                        <!-- 需要多少积分 -->

                        <EditText
                            android:id="@+id/edt_card_gdpoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="@string/card_zemo"
                            android:inputType="numberDecimal"
                            android:maxLength="9"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />
                        <!-- 会员卡级别对应的会员卡 -->

                        <TextView
                            style="@style/LyWHFourth"
                            android:layout_width="match_parent"
                            android:layout_weight="9"
                            android:text="@string/cardvip_igl_fen"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/LyCradGradeSet"
                    android:background="@color/white" >

                    <!-- 每个等级对应的卡 -->

                    <TextView
                        style="@style/Tv_CouponSetFont"
                        android:layout_marginLeft="10dp"
                        android:text="@string/cardvip_gddc"
                        android:textSize="@dimen/card_fontsize" />
                    <!-- 享受折扣 -->

                    <LinearLayout
                        style="@style/LyCradGradeFirst"
                        android:layout_marginLeft="20dp" >

                        <EditText
                            android:id="@+id/edt_card_gddc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="@string/card_zemo"
                            android:inputType="numberDecimal"
                            android:maxLength="9"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />

                        <TextView
                            style="@style/Tv_CouponSetFont"
                            android:layout_width="match_parent"
                            android:layout_weight="9"
                            android:text="@string/cardvip_gd_dc"
                            android:textSize="@dimen/card_fontsize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/LyCradGradeSet"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" >

                    <LinearLayout
                        style="@style/LyCradGradeFirst"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/LyWHFourth"
                            android:layout_weight="3"
                            android:text="@string/tv_cardvip_igl_mei"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />
                        <!-- 每多少钱积多少分 -->

                        <EditText
                            android:id="@+id/edt_card_gdmoney"
                            style="@style/LyWHFourth"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/sel_edt_input"
                            android:focusable="false"
                            android:gravity="center_horizontal"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:text="1"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />

                        <TextView
                            style="@style/LyWHFourth"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="3"
                            android:text="@string/tv_coupon_ddt_money_yuan"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LyCradGradeFirst"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/LyWHFourth"
                            android:layout_weight="3"
                            android:text="@string/tv_cardvip_igl_ji"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />

                        <EditText
                            android:id="@+id/edt_card_gdcount"
                            style="@style/LyWHFourth"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/sel_edt_input"
                            android:gravity="center_horizontal"
                            android:inputType="numberDecimal"
                            android:maxLength="9"
                            android:singleLine="true"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />

                        <TextView
                            style="@style/LyWHFourth"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="3"
                            android:text="@string/cardvip_igl_fen"
                            android:textColor="@color/home_topsixfont"
                            android:textSize="@dimen/card_fontsize" />
                    </LinearLayout>
                </LinearLayout>
