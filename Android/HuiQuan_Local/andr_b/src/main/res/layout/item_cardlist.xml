<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet_"
    android:layout_width="wrap_content"
    android:background="@color/bgall"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        style="@style/LyWHFourth"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cardbg" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_border"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_card_list_pic"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_cardvip_ls_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/LyWHSecond"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_cardvip_nkname"
                    style="@style/Tv_Font"
                    android:text="@string/cardvip_nnk" />
                <!-- 呢称 -->

                <TextView
                    android:id="@+id/tv_cardvip_ls_name"
                    style="@style/Tv_Font"
                    android:layout_toRightOf="@+id/tv_cardvip_nkname"
                    android:singleLine="true"
                    android:text="XX" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/LyWHSecond"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_cardvip_csm_times"
                    style="@style/Tv_Font"
                    android:text="@string/cardvip_csm_number" />
                <!-- vip使用的次数 -->

                <TextView
                    android:id="@+id/tv_cardvip_ls_csm_times"
                    style="@style/Tv_Font"
                    android:layout_toRightOf="@+id/tv_cardvip_csm_times"
                    android:singleLine="true"
                    android:text="XX次" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/LyWHSecond"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_cardvip_coupon_sum"
                    style="@style/Tv_Font"
                    android:text="@string/cardvip_use_coupon" />
                <!-- 优惠券使用多少张 -->

                <TextView
                    android:id="@+id/tv_cardvip_ls_coupon_sum"
                    style="@style/Tv_Font"
                    android:layout_toRightOf="@+id/tv_cardvip_coupon_sum"
                    android:singleLine="true"
                    android:text="XX张" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <RelativeLayout
                style="@style/LyWHSecond"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_card_ls_id_title"
                    style="@style/Tv_Font"
                    android:text="@string/tv_card_ls_id_title" />

                <TextView
                    android:id="@+id/tv_card_ls_id"
                    style="@style/Tv_Font"
                    android:layout_toRightOf="@+id/tv_card_ls_id_title"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/LyWHSecond"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_card_csm_title"
                    style="@style/Tv_Font"
                    android:text="@string/tv_card_ls_csm_sum_title" />
                <!-- 消费总额 -->

                <TextView
                    android:id="@+id/tv_card_ls_csm_total"
                    style="@style/Tv_Font"
                    android:layout_toRightOf="@+id/tv_card_csm_title"
                    android:singleLine="true"
                    android:text="XX元" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/LyWHSecond"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/tv_card_ddc_title"
                    style="@style/Tv_Font"
                    android:text="@string/tv_card_ls_ddc_sum_title" />
                <!-- 折扣多少 -->

                <TextView
                    android:id="@+id/tv_card_ls_ddt_total"
                    style="@style/Tv_Font"
                    android:layout_toRightOf="@+id/tv_card_ddc_title"
                    android:singleLine="true"
                    android:text="XX元" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>