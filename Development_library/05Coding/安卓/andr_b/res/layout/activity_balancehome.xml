<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_home" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:layout_marginBottom="5dp"
        android:background="@color/white" >

        <RadioGroup
            android:id="@+id/rg_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fadingEdge="none"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_orderlist_suggset"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="-1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_card_left"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@drawable/selector_radio_card_checked_font" />

            <RadioButton
                android:id="@+id/rbtn_orderlist_fail"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_card_right"
                android:button="@null"
                android:gravity="center"
                android:text="未完成"
                android:textColor="@drawable/selector_radio_card_checked_font" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_cardlist_content"
        style="@style/LyWHFirst"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>