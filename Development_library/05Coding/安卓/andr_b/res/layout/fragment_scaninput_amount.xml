<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
    <include layout="@layout/common_title_commit" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/consumptionamount"/>
        <EditText 
            android:id="@+id/et_scan_inputamount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="center|right"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/red"
            android:textColor="@color/red"
            android:inputType="numberDecimal"
            android:hint="0"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:text="元"/>
    </LinearLayout>
    
    <TextView style="@style/VLine"/>
    
    <CheckBox
	     android:id="@+id/ck_scan_nodiscount"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:button="@drawable/sel_checkbox_state"
	     android:textSize="14sp"
	     android:textColor="@color/msg_font"
	     android:background="@color/white"
	     android:text="@string/nodiscountfunction" />
    
    <TextView style="@style/VLine"/>
    
    <LinearLayout 
        android:id="@+id/ly_scan_nodiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/nodiscount"/>
        <EditText 
            android:id="@+id/et_scan_nodiscount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="center|right"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/red"
            android:textColor="@color/red"
            android:inputType="numberDecimal"
            android:hint="0"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:text="元"/>
    </LinearLayout>
    
    <TextView style="@style/VLine"/>
    
    <Button
         android:id="@+id/btn_scan_scanreceivables"
         android:layout_width="match_parent"
         android:layout_height="@dimen/navigation_bar"
         android:background="@drawable/login_btn"
         android:text="@string/scanreceivables"
         android:layout_margin="10dp"
         android:textColor="@color/white" />
    
    <Button
         android:id="@+id/btn_scan_alternative"
         android:layout_width="match_parent"
         android:layout_height="@dimen/navigation_bar"
         android:background="@drawable/login_btn"
         android:text="@string/alternative"
         android:layout_margin="10dp"
         android:visibility="gone"
         android:textColor="@color/white" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
           	android:layout_width="wrap_content"
           	android:layout_height="@dimen/layout_height"
           	android:gravity="center"
           	android:layout_marginLeft="10dp"
           	android:textColor="@color/red"
           	android:text="@string/maxamount"/>
    </LinearLayout>

</LinearLayout>
