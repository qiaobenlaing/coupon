<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFirst"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ry_order_detail"
        style="@style/LyWHFourth"
        android:layout_marginBottom="10dp"
        android:background="@color/white" >

        <TextView
            style="@style/LyWHFourth"
            android:layout_height="1dp"
            android:layout_below="@+id/ry_ordernbr"
            android:background="@color/light_grey" />

        <RelativeLayout
            android:id="@+id/ly_text"
            style="@style/LyWHFourth"
            android:layout_below="@+id/ry_ordernbr" >

            <ImageView
                android:id="@+id/shop_logo"
                style="@style/LyWHSecond"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_border"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:id="@+id/ly_content"
                style="@style/LyWHFourth"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/shop_logo"
                android:orientation="vertical" >

                <LinearLayout 
                    android:id="@+id/ly_order_paymeoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
	                    android:id="@+id/tv_order_paymeoney"
	                    style="@style/LyWHSecond"
	                    android:textSize="20sp" 
	                    android:text="00"/>
                    
                    <TextView 
                        android:id="@+id/tv_order_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:visibility="visible"
                        android:text="xx"/>
                </LinearLayout>
                
                <TextView
                    android:id="@+id/tv_shop_name"
                    style="@style/LyWHSecond"
                    android:layout_below="@+id/ly_order_paymeoney"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/just_gray"
                    android:singleLine="true"
                    android:text="xx" />

                <TextView
                    android:id="@+id/tv_shop_phone"
                    style="@style/LyWHSecond"
                    android:layout_below="@+id/ly_order_paymeoney"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_shop_name"
                    android:textColor="@color/just_gray" 
                    android:singleLine="true"
                    android:text="xx"/>

                <TextView
                    android:id="@+id/tv_order_status"
                    style="@style/LyWHSecond"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="@color/deep_grey" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_below_line"
            style="@style/LyWHFourth"
            android:layout_height="1dp"
            android:layout_below="@+id/ly_text"
            android:background="@color/light_grey" />

        <TextView
            android:id="@+id/tv_shop_date"
            style="@style/LyWHSecond"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_below_line"  
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="0"/>
    </RelativeLayout>

</LinearLayout>