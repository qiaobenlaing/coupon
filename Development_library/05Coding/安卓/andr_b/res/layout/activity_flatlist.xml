<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_order" />

    <LinearLayout
        android:id="@+id/ly_text_content"
        style="@style/LyWHFourth"
        android:background="@color/after_order_yellow"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            style="@style/LyWHSecond"
            android:layout_gravity="center"
            android:text="@string/today" />

        <TextView
            android:id="@+id/tv_flat_receive"
            style="@style/LyWHSecond"
            android:layout_gravity="center"
            android:text="@string/today"
            android:textColor="@color/red" />

        <TextView
            style="@style/LyWHSecond"
            android:layout_gravity="center"
            android:text="@string/confirm_orders" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_flatlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>