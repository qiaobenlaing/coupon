<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_home" />

    <ScrollView
        android:id="@+id/sv_actdetail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/tv_myrecommoned_back"
                    style="@style/imageview"
                    android:layout_centerVertical="true"
                    android:src="@drawable/shop_arrow1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_myrecommoned_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_myrecommoned_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="æœˆ" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/tv_myrecommoned_to"
                    style="@style/imageview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/shop_arrow" />
            </RelativeLayout>

            <LinearLayout
                style="@style/LyWHFourth"
                android:background="@drawable/shape_border"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ly_recommoned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/IvImage"
                        android:layout_height="57dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="@string/my_recommoned_person"
                        android:textColor="@color/coupon_hometopfont" />

                    <TextView
                        android:id="@+id/tv_myrecommoned_person"
                        style="@style/TvHomeImge"
                        android:text="0"
                        android:textColor="@color/coupon_hometopfont" />
                </LinearLayout>

                <TextView style="@style/VLineV" />

                <LinearLayout
                    android:id="@+id/ly_mybonus"
                    style="@style/LyWHFourth"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/IvImage"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="@string/my_recommoned_bonus"
                        android:textColor="@color/coupon_hometopfont" />

                    <TextView
                        android:id="@+id/tv_myrecommoned_bonus"
                        style="@style/TvHomeImge"
                        android:text="0"
                        android:textColor="@color/coupon_hometopfont" />
                </LinearLayout>

                <TextView style="@style/VLineV" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" >

                        <TextView
                            android:id="@+id/tv_myrecommoned_bonusimg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/recommoned_bonus"
                            android:gravity="center"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pr_recommoned_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/my_recommoned_user"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_recommoned_rule_detail" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_border"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_invite_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/my_recommoned_mysend"
                            android:textColor="@color/coupon_hometopfont" />

                        <TextView
                            android:id="@+id/tv_recommoned_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_invite_code"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toEndOf="@+id/tv_invite_code"
                            android:text="1us4d"
                            android:textSize="25dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_myrecommoned_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/login_btn"
                        android:gravity="center"
                        android:text="@string/my_recommoned_share"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>