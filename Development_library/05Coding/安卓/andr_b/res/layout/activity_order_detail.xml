<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFirst"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_commit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/app_item_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ly_nodate"
                style="@style/LyWHFirst"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/prog_nodata"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在加载数据" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center|left"
                    android:text="xxx"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_order_money"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_lheight"
                    android:gravity="center"
                    android:text="0元"
                    android:textColor="@color/accntburgundy"
                    android:textSize="30dp" />
            </LinearLayout>

            <TextView style="@style/VLine" />

            <TextView
                style="@style/LyWHFourth"
                android:layout_height="10dp"
                android:background="@color/app_bg" />

            <LinearLayout
                android:id="@+id/ry_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/shape_divider"
                android:orientation="vertical"
                android:showDividers="middle" >

                <RelativeLayout
                    android:id="@+id/rl_order_click"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_lheight"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="left"
                        android:background="@drawable/bg_border"
                        android:scaleType="fitXY"
                        android:src="@drawable/shop_logo"
                        android:text="@string/ordernbr" />

                    <TextView
                        android:id="@+id/tv_order_name"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/iv_image"
                        android:layout_toLeftOf="@+id/ly_imagetview"
                        android:singleLine="true"
                        android:text="xx"
                        android:textColor="@color/deep_grey" />

                    <LinearLayout
                        android:id="@+id/ly_imagetview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="right" >
                        <ImageView
                          style="@style/imageview"
                          android:src="@drawable/shop_arrow"/>
                    </LinearLayout>
                    
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_order_tell"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_order_tel"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/csm_tel" />

                    <TextView
                        android:id="@+id/tv_order_tell"
                        style="@style/LyWHSecond"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_order_tel"
                        android:text="0"
                        android:textColor="@color/deep_grey" />
                </RelativeLayout>

                <TextView
                    style="@style/LyWHFourth"
                    android:layout_height="10dp"
                    android:background="@color/app_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_order"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/ordernbr" />

                    <TextView
                        android:id="@+id/tv_ordernbr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_order"
                        android:text="0"
                        android:textColor="@color/deep_grey" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/rl_orderdetail_batch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_batch"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/batchnbr" />

                    <TextView
                        android:id="@+id/tv_batchnbr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_batch"
                        android:text="0"
                        android:textColor="@color/deep_grey" />
                    <TextView
                        android:id="@+id/tv_batch_function"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_batchnbr"
                        android:text="0"
                        android:textColor="@color/deep_grey" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/rl_orderdetail_exchangecode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >
                    <TextView
                        android:id="@+id/tv_order_exchangecode"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/exchangecode" />

                    <TextView
                        android:id="@+id/tv_exchangecode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_order_exchangecode"
                        android:text="0"
                        android:textColor="@color/deep_grey" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/rl_orderdetail_paytype"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_order_paytype"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/orderpaytype" />

                    <TextView
                        android:id="@+id/tv_ordernbr_paytype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_order_paytype"
                        android:text="0"
                        android:textColor="@color/deep_grey" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tv_order_date"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/csm_time" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        style="@style/LyWHSecond"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_order_date"
                        android:text="0"
                        android:textColor="@color/deep_grey" />
                </RelativeLayout>

                <TextView
                    style="@style/LyWHFourth"
                    android:layout_height="10dp"
                    android:background="@color/app_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/csm_money" />

                    <TextView
                        android:id="@+id/price_unit"
                        style="@style/LyWHSecond"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/money_unit"
                        android:textStyle="bold" />
                </RelativeLayout>
                
                <RelativeLayout
                     android:id="@+id/rl_ordershop_bouns"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/layout_height"
                     android:layout_marginLeft="10dp"
                     android:gravity="center_vertical"
                     android:paddingTop="5dp" >
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentLeft="true"
                          android:text="@string/bouns_shop"/>

                      <TextView
                          android:id="@+id/tv_ordershop_bouns"
                          style="@style/LyWHSecond"
                          android:layout_alignParentRight="true"
                          android:text="@string/money_unit"
                          android:layout_marginRight="10dp"
                          android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_orderhuiquan_bouns"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/huiquan_bouns" />

                    <TextView
                        android:id="@+id/tv_orderhuiquan_bounds"
                        style="@style/LyWHSecond"
                        android:layout_alignParentRight="true"
                        android:text="@string/money_unit"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"/>
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/rl_part"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/csm_part" />

                    <TextView
                        android:id="@+id/price_part"
                        style="@style/LyWHSecond"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/money_unit"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ry_arrow_discount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/total_ddtmoney" />

                    <TextView
                        android:id="@+id/tv_totalprice_unit"
                        style="@style/LyWHSecond"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/iv_arrow_down"
                        android:text="@string/money_unit"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_arrow_down"
                        style="@style/LyWHSecond"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ly_all_discount"
                    style="@style/LyWHFourth"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <RelativeLayout
                        android:id="@+id/ry_couponUtil"
                        style="@style/LyWHFourth"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/tv_coupon_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/coupon_dcmoney"
                            android:textColor="@color/calendar_font" />

                        <TextView
                            android:id="@+id/tv_insteadprice"
                            style="@style/LyWHSecond"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/tv_coupon_type"
                            android:text=""
                            android:textColor="@color/calendar_font" />

                        <TextView
                            android:id="@+id/tv_coupon_unit"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:text="@string/money_unit"
                            android:textColor="@color/calendar_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ry_bankcard_Util"
                        style="@style/LyWHFourth"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/bank_dcmoney"
                            android:textColor="@color/calendar_font" />

                        <TextView
                            android:id="@+id/tv_bankcardcard_unit"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:text="@string/money_unit"
                            android:textColor="@color/calendar_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/LyWHFourth"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/card_ddtmoney"
                            android:textColor="@color/calendar_font" />

                        <TextView
                            android:id="@+id/tv_cardprice_unit"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:text="@string/money_unit"
                            android:textColor="@color/calendar_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/LyWHFourth"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/bouns_shop"
                            android:textColor="@color/calendar_font" />

                        <TextView
                            android:id="@+id/tv_shop_bouns"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:text="@string/money_unit"
                            android:textColor="@color/calendar_font" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/LyWHFourth"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/huiquan_bouns"
                            android:textColor="@color/calendar_font" />

                        <TextView
                            android:id="@+id/tv_huiquan_bounds"
                            style="@style/LyWHSecond"
                            android:layout_alignParentRight="true"
                            android:text="@string/money_unit"
                            android:textColor="@color/calendar_font" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/pay_totalmoney"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_newprice_unit"
                        style="@style/LyWHSecond"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/money_unit"
                        android:textColor="@color/accntburgundy"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>