        <TextView
            android:id="@+id/bonus_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="50"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

</LinearLayout>