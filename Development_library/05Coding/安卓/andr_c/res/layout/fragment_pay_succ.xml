<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet"
    android:background="@color/bgall" >

    <RelativeLayout
        android:id="@+id/rl_pay_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/backup" />

        <TextView
            style="@style/TvSet"
            android:layout_centerInParent="true"
            android:text="@string/my_pay_two_code"
            android:textColor="@color/white"
            android:textSize="@dimen/app_title_bar_font" />
    </RelativeLayout>

    <ScrollView
        style="@style/LyWHFirst"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            style="@style/LyWHFirst"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="支付成功"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_arrow"
                    android:layout_toRightOf="@+id/iv_user_head"
                    android:text="12312312"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    style="@style/LyWHSecond"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/shop_arrow" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_csm_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:padding="15dp"
                android:text="订单号：1111111111111111"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/rl_total_price"
                style="@style/rlScanPaySucc"
                android:layout_marginTop="8dp" >

                <TextView
                    android:id="@+id/tv_total_price_title"
                    style="@style/tvScanPayLeft"
                    android:layout_alignParentLeft="true"
                    android:text="消费金额" />

                <TextView
                    android:id="@+id/tv_csm_order"
                    style="@style/tvScanPayRight"
                    android:layout_alignParentRight="true"
                    android:text="10元" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_discount_price"
                style="@style/rlScanPaySucc" >

                <TextView
                    android:id="@+id/tv_discount_price_title"
                    style="@style/tvScanPayLeft"
                    android:layout_alignParentLeft="true"
                    android:text="优惠金额" />

                <TextView
                    android:id="@+id/tv_discount_price"
                    style="@style/tvScanPayRight"
                    android:layout_alignParentRight="true"
                    android:text="10元" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pay_price"
                style="@style/rlScanPaySucc" >

                <TextView
                    android:id="@+id/tv_pay_price_title"
                    style="@style/tvScanPayLeft"
                    android:layout_alignParentLeft="true"
                    android:text="实付金额" />

                <TextView
                    android:id="@+id/tv_pay_price"
                    style="@style/tvScanPayRight"
                    android:layout_alignParentRight="true"
                    android:text="10元" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>