<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/comm_detail_actcontent" />

    <FrameLayout
        style="@style/LyWHFirst"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/wb_actdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ly_nodata"
            style="@style/LyWHFourth"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/iv_nodata"
                style="@style/LyWHFirst"
                android:scaleType="centerInside"
                android:src="@drawable/no_message"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/prog_nodata"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_progress"
                android:visibility="gone" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pr_act_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>