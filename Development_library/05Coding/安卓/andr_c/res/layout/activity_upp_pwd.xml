<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet"
    android:background="@color/app_bg" >

    <include layout="@layout/common_title_commit" />

    <RelativeLayout
        style="@style/LyWHFourth"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_reset_send_iden_code"
            style="@style/LyWHSecond"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="@string/new_pwd"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_new_pwd"
            style="@style/LyWHSecond"
            android:layout_width="180dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btn_reset_send_iden_code"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/input_newpwd"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/tv_showpassword"
            style="@style/LyWHSecond"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:button="@drawable/sel_loginpass_state" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_bar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_btn"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>