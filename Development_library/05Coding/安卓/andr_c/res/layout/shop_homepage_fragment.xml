<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="10dp">
        <TextView 
            android:id="@+id/tv_shop_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time"
            android:text="08:00 - 22:00"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/tv_shop_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气：1000"/>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/address"
        android:layout_marginLeft="10dp"
        android:text="莲都区大洋路199号"
        android:drawablePadding="10dp"
        android:layout_marginBottom="12dp"/>
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	<LinearLayout 
   	    android:id="@+id/ll_recentvisit"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:padding="5dp"
   	    android:orientation="horizontal"
   	    android:gravity="center_vertical">
	   	<TextView 
	   	    android:layout_width="0dp"
	   	    android:layout_weight="1"
	   	    android:layout_height="wrap_content"
	   	    android:text="最近访客"
	   	    android:textSize="18sp"/>
	   	
	   	<ImageView 
	   	    android:id="@+id/visit_user1"
	   	    android:layout_width="36dp"
	   	    android:layout_height="36dp"
	   	    android:src="@drawable/activity"/>
	   	<ImageView 
	   	    android:id="@+id/visit_user2"
	   	    android:layout_width="36dp"
	   	    android:layout_height="36dp"
	   	    android:src="@drawable/activity"
	   	    android:layout_marginLeft="5dp"/>
	   	<ImageView 
	   	    android:id="@+id/visit_user3"
	   	    android:layout_width="36dp"
	   	    android:layout_height="36dp"
	   	    android:src="@drawable/activity"
	   	    android:layout_marginLeft="5dp"/>
	   	<ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/acticbc_arrows"
	   	    android:layout_marginLeft="10dp"/>
   	    
   	</LinearLayout>
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	
   	<LinearLayout 
   	    android:id="@+id/service"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical">
   	    <LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:padding="5dp"
	   	    android:orientation="horizontal"
	   	    android:gravity="center_vertical">
   	    	<TextView 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:text="商品/服务"
   	    	    android:textSize="18sp"/>
   	    	
   	    	<ImageView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:src="@drawable/acticbc_arrows"
		   	    android:layout_marginLeft="10dp"/>
   	    </LinearLayout>
   	   	<View 
		    android:layout_width="match_parent"
		    android:layout_height="0.5dp"
		    android:background="@color/thin_gray"/>
   	   	 <LinearLayout 
   	   	    android:id="@+id/ll_shop_products"  
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:padding="5dp"
	   	    android:orientation="horizontal"
	   	    android:gravity="center_vertical">
   	    	<LinearLayout 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:orientation="vertical"
   	    	    android:gravity="center">
   	    	    <ImageView 
   	    	        android:id="@+id/iv_product_logo1"
   	    	        android:layout_width="72dp"
   	    	        android:layout_height="72dp"
   	    	        android:src="@drawable/home_other"/>
   	    	    <TextView 
   	    	        android:id="@+id/name_product_logo1"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="商品1"/>
   	    	    <TextView 
   	    	        android:id="@+id/price_product_logo1"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="￥100"/>
   	    	</LinearLayout>
   	    	
   	    	 <LinearLayout 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:orientation="vertical"
   	    	    android:gravity="center">
   	    	    <ImageView 
   	    	        android:id="@+id/iv_product_logo2"
   	    	        android:layout_width="72dp"
   	    	        android:layout_height="72dp"
   	    	        android:src="@drawable/home_other"/>
   	    	    <TextView 
   	    	        android:id="@+id/name_product_logo2"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="商品2"/>
   	    	    <TextView 
   	    	        android:id="@+id/price_product_logo2"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="￥200"/>
   	    	</LinearLayout>
   	    	
   	    	 <LinearLayout 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:orientation="vertical"
   	    	    android:gravity="center">
   	    	     <ImageView 
   	    	        android:id="@+id/iv_product_logo3"
   	    	        android:layout_width="72dp"
   	    	        android:layout_height="72dp"
   	    	        android:src="@drawable/home_other"/>
   	    	    <TextView 
   	    	        android:id="@+id/name_product_logo3"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="商品3"/>
   	    	    <TextView 
   	    	        android:id="@+id/price_product_logo3"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="￥300"/>
   	    	</LinearLayout>
   	    	<ImageView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:src="@drawable/acticbc_arrows"
		   	    android:layout_marginLeft="10dp"/>
   	    </LinearLayout>
   	</LinearLayout>
   	
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	
   	 <LinearLayout 
   	    android:id="@+id/ll_coupons"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:padding="5dp"
   	    android:orientation="horizontal"
   	    android:gravity="center_vertical">
 	    <TextView 
    	    android:layout_width="0dp"
    	    android:layout_weight="1"
    	    android:layout_height="wrap_content"
    	    android:text="领取优惠券"
    	    android:textSize="18sp"/>
 	    	
 	    <ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/acticbc_arrows"
	   	    android:layout_marginLeft="10dp"/>
   	</LinearLayout>
   	
   	 
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/thin_gray"/>
   	
   	<LinearLayout 
   	    android:id="@+id/ll_promotions"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:padding="5dp"
   	    android:orientation="horizontal"
   	    android:gravity="center_vertical">
 	    <TextView 
    	    android:layout_width="0dp"
    	    android:layout_weight="1"
    	    android:layout_height="wrap_content"
    	    android:text="店铺活动"
    	    android:textSize="18sp"/>
 	    	
 	    <ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/acticbc_arrows"
	   	    android:layout_marginLeft="10dp"/>
   	</LinearLayout>
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	<TextView 
      android:id="@+id/tv_shop_introduce"
      android:padding="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="店铺简介:"/>
   	<TextView 
      android:id="@+id/tv_shop_introduce_detail"
      android:padding="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="14sp"/>
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	   

</LinearLayout>
