<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_coupon_item"
    style="@style/LyCommSet"
    android:background="@drawable/bg_image"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/rl_head"
        style="@style/LyWHFourth"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_coupon_logo_t"
            style="@style/LyWHSecond"
            android:text="@string/tv_coupon_logo" />

        <TextView
            android:id="@+id/tv_coupon_logo"
            style="@style/LyWHSecond"
            android:layout_toRightOf="@+id/tv_coupon_logo_t"
            android:text="XXXX" />

        <TextView
            android:id="@+id/tv_coupon_price_t"
            style="@style/LyWHSecond"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_coupon_logo"
            android:text="@string/tv_coupon_price" />

        <TextView
            android:id="@+id/tv_coupon_price"
            style="@style/LyWHSecond"
            android:layout_toRightOf="@+id/tv_coupon_price_t"
            android:text="XXXX" />

        <CheckBox
            android:id="@+id/ckb_coupon_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/sel_checkbox_state"
            android:button="@null" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_coupon_content"
        style="@style/LyWHFourth"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_grade"
            style="@style/LyWHSecond"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <TextView
                android:id="@+id/tv_coupon_no_t"
                style="@style/LyWHSecond"
                android:text="@string/tv_coupon_no" />

            <TextView
                android:id="@+id/tv_coupon_no"
                style="@style/LyWHSecond"
                android:layout_width="150dp"
                android:layout_toRightOf="@+id/tv_coupon_no_t"
                android:text="XXXXXXXX" />

            <TextView
                android:id="@+id/tv_coupon_effet_t"
                style="@style/LyWHSecond"
                android:layout_below="@+id/tv_coupon_no_t"
                android:layout_marginTop="5dp"
                android:text="@string/tv_coupon_effet" />

            <TextView
                android:id="@+id/tv_coupon_effet"
                style="@style/LyWHSecond"
                android:layout_below="@+id/tv_coupon_no"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_coupon_effet_t"
                android:text="XXXXXXXX" />

            <TextView
                android:id="@+id/tv_coupon_gd_t"
                style="@style/LyWHSecond"
                android:layout_below="@+id/tv_coupon_effet_t"
                android:layout_marginTop="5dp"
                android:text="@string/tv_coupon_user_grade" />

            <TextView
                android:id="@+id/tv_coupon_gd"
                style="@style/LyWHSecond"
                android:layout_below="@+id/tv_coupon_effet"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_coupon_gd_t"
                android:text="XXXXXXXX" />

            <TextView
                android:id="@+id/tv_coupon_tel_t"
                style="@style/LyWHSecond"
                android:layout_below="@+id/tv_coupon_gd_t"
                android:layout_marginTop="5dp"
                android:text="@string/tv_coupon_tel" />

            <TextView
                android:id="@+id/tv_coupon_tel"
                style="@style/LyWHSecond"
                android:layout_below="@+id/tv_coupon_gd"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_coupon_tel_t"
                android:text="XXXXXXXX" />

            <TextView
                android:id="@+id/tv_coupon_addr_t"
                style="@style/LyWHSecond"
                android:layout_below="@+id/tv_coupon_tel_t"
                android:layout_marginTop="5dp"
                android:text="@string/tv_coupon_addr" />

            <TextView
                android:id="@+id/tv_coupon_addr"
                style="@style/LyWHSecond"
                android:layout_width="150dp"
                android:layout_below="@+id/tv_coupon_tel"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_coupon_addr_t"
                android:text="XXXXXXXXXXXXXX" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_coupon_twocode"
            style="@style/LyWHSecond"
            android:layout_width="120dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/rl_grade"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_coupon_two_code"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/two_code" />

            <Button
                android:id="@+id/btn_coupon_show"
                style="@style/LyWHSecond"
                android:layout_width="120dp"
                android:layout_below="@+id/iv_coupon_two_code"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnstate"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/btn_coupon_all"
                android:textColor="@color/purple" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>