<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_home" />

    <ScrollView
        android:id="@+id/sv_actdetail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/LyWHFourth"
                android:background="@drawable/shape_border"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ly_recommoned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/IvImage"
                        android:gravity="center"
                        android:text="@string/my_recommoned_person"
                        android:textColor="@color/coupon_hometopfont" />

                    <TextView
                        android:id="@+id/tv_myrecommoned_person"
                        style="@style/TvHomeImge"
                        android:textColor="@color/coupon_hometopfont" />
                </LinearLayout>

                <TextView style="@style/VLineV" />

                <LinearLayout
                    android:id="@+id/ly_mybonus"
                    style="@style/LyWHFourth"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/IvImage"
                        android:gravity="center"
                        android:text="@string/my_recommoned_bonus"
                        android:textColor="@color/coupon_hometopfont" />

                    <TextView
                        android:id="@+id/tv_myrecommoned_bonus"
                        style="@style/TvHomeImge"
                        android:textColor="@color/coupon_hometopfont" />
                </LinearLayout>

                <TextView style="@style/VLineV" />

                <LinearLayout
                    android:id="@+id/ly_mycoupons"
                    style="@style/LyWHFourth"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        style="@style/IvImage"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:text="@string/my_recommoned_coupons"
                        android:textColor="@color/coupon_hometopfont" />

                    <TextView
                        android:id="@+id/tv_myrecommoned_coupons"
                        style="@style/TvHomeImge"
                        android:text="0"
                        android:textColor="@color/coupon_hometopfont" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/tv_myrecommoned_bonusimg"
                        android:layout_width="200dp"
                        android:layout_height="124dp"
                        android:background="@drawable/my_recom_bonus"
                        android:gravity="center"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/send_img"
                            android:gravity="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pr_recommoned_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ly_top_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_top_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_recommoned_detail"
                            android:textColor="@color/shopdetail_content" />

                        <TextView
                            android:id="@+id/tv_myRecommoned_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/red" />

                        <TextView
                            android:id="@+id/tv_left_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_left_detail"
                            android:textColor="@color/shopdetail_content"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_right_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_top_details"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/my_recommoned_details"
                        android:textColor="@color/shopdetail_content" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_border"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_invite_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/my_recommoned_mysend"
                            android:textColor="@color/coupon_hometopfont" />

                        <TextView
                            android:id="@+id/tv_recommoned_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_invite_code"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toEndOf="@+id/tv_invite_code"
                            android:text=""
                            android:textSize="25dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_myrecommoned_share"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/layout_height"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/login_btn"
                        android:gravity="center"
                        android:text="@string/my_recommoned_share"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center"
                    android:background="@color/red" />

                <TextView
                    android:id="@+id/tv_myrecommoned_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_myborder"
                    android:gravity="center"
                    android:text="@string/my_recommoned_rule" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/ly_myrecommoned_sel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone" >

                <CheckBox
                    android:id="@+id/ck_myrecommoned_sel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:button="@drawable/sel_arrow_rule"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ly_more_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_recommoned_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/coupon_hometopfont" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>