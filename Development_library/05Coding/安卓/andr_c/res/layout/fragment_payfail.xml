<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title_home" />

    <LinearLayout
        style="@style/LyWHFourth"
        android:layout_height="65dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_bgall_onclick"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/LyWHSecond"
            android:layout_height="fill_parent"
            android:gravity="center_vertical" >

            <ImageView
                style="@style/LyWHSecond"
                android:layout_marginLeft="10dp"
                android:background="@drawable/sendfail" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/pay_fail"
                android:textSize="16sp" />

            <TextView
                style="@style/LyWHSecond"
                android:layout_marginTop="5dp"
                android:text="@string/pay_suggest"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/LyWHFourth"
        android:layout_height="65dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_bgall_onclick"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/LyWHSecond"
            android:layout_height="fill_parent"
            android:gravity="center_vertical" >

            <ImageView
                style="@style/LyWHSecond"
                android:layout_marginLeft="10dp"
                android:background="@drawable/right_img" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                style="@style/LyWHSecond"
                android:text="@string/pay_success"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/LyWHSecond"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="@string/you_love"
        android:textColor="@color/textcolor" />

    <com.huift.hfq.base.view.XListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="@color/line_gray"
        android:dividerHeight="1dp"
        android:scrollbars="none" />

</LinearLayout>