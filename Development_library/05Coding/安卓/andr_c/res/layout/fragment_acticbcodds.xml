<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_commit" />

    <com.huift.hfq.base.view.XListView
        android:id="@+id/lv_show_allact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/very_thin_gray"
        android:dividerHeight="0.2dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ly_nodate"
        style="@style/LyWHFirst"
        android:background="@color/bgall"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            style="@style/LyWHSecond"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/no_message" />
    </LinearLayout>

</LinearLayout>