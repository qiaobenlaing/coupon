<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/iv_teahcer_introduce_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/tv_teacher_introduce_name" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="教师名称"
	        android:padding="10dp"/>
	    <TextView
	        android:id="@+id/tv_teacher_introduce_level" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="一级教师"
	        android:padding="10dp"/>
	    
	    <TextView
	        android:id="@+id/tv_teacher_introduce_class" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="英语"
	        android:padding="10dp"
	        android:layout_marginLeft="10dp"/>
	</LinearLayout>
	<TextView 
	    android:id="@+id/tv_teacher_introcude_detail"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:text="教师介绍的黑色短裤哈数据库和开始附件是副科级"/>
	<ListView 
	    android:id="@+id/lv_teacher_introcude_works"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	</ListView>
</LinearLayout>
