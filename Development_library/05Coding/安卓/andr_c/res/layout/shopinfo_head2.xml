<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_shopinfo_topview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <View 
	    android:layout_width="match_parent"
	    android:layout_height="0.1dp"
	    android:background="@color/thin_gray"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
       	android:paddingBottom="10dp"
       	android:background="@color/white">
        <TextView 
            android:id="@+id/tv_shopname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="艺甜法式烘焙坊(明珠店)"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textSize="18sp"/>
        
        <ImageView 
            android:id="@+id/iv_icbc_log"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icbkbank"
            android:visibility="invisible"/>
        <TextView 
            android:id="@+id/tv_icbc_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.8折"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:visibility="invisible"/>
        
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_marginLeft="10dp" 
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    
     <View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
     
    <LinearLayout 
        android:id="@+id/ll_food_shop"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:gravity="center_vertical">
        <LinearLayout 
            android:id="@+id/ll_take_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/take_order"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点餐"/>
        </LinearLayout>
        
         <LinearLayout 
            android:id="@+id/ll_take_out"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/take_out"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外卖"/>
        </LinearLayout>
        
          <LinearLayout 
            android:id="@+id/ll_book_food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/book_food"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预定"/>
        </LinearLayout>
        
           <LinearLayout 
            android:id="@+id/ll_order_food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView 
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/order_food"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white">
        <TextView 
            android:id="@+id/homepage_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="店铺首页"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="5dp"/>
        
         <TextView 
            android:id="@+id/coupon_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="优惠券"
             android:textSize="18sp"
            android:gravity="center"
            android:padding="5dp"/>
         
          <TextView 
            android:id="@+id/promotion_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="店铺活动"
             android:textSize="18sp"
            android:gravity="center"
            android:padding="5dp"/>
          
           <TextView 
            android:id="@+id/service_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="商品/服务"
             android:textSize="18sp"
            android:gravity="center"
            android:padding="5dp"/>
        
    </LinearLayout>
    
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/thin_gray"/>
</LinearLayout>
