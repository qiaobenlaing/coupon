<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFirst"
    android:background="@color/bgall"
    android:orientation="vertical" >

    <include layout="@layout/common_title_commit" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/first"
            style="@style/LyWHFirst"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_xheight"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:visibility="visible" >

                <TextView
                    style="@style/LyWHSecond"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/person_logo"
                    android:textSize="16dp" />

                <LinearLayout
                    style="@style/LyWHSecond"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/iv_myshopinfo_logo"
                        style="@style/LyWHSecond"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/no_portrait"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    style="@style/LyWHSecond"
                    android:text="@string/nickname"
                    android:textSize="16dp" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:gravity="center_vertical|right" >

                    <EditText
                        android:id="@+id/et_myinfomation_nickname"
                        style="@style/LyWHFourth"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right"
                        android:hint="填一下昵称"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    style="@style/LyWHSecond"
                    android:text="@string/name"
                    android:textSize="16dp" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:gravity="center_vertical|right" >

                    <EditText
                        android:id="@+id/et_myinfomation_name"
                        style="@style/LyWHFourth"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right"
                        android:hint="你的大名"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    style="@style/LyWHSecond"
                    android:text="@string/sex"
                    android:textSize="16dp" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:gravity="center_vertical|right" >

                    <TextView
                        android:id="@+id/tv_myinfomation_sex"
                        style="@style/LyWHFourth"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="right"
                        android:hint="选择性别"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    style="@style/LyWHSecond"
                    android:text="@string/area"
                    android:textSize="16dp" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:gravity="center_vertical|right" >

                    <TextView
                        android:id="@+id/tv_myinfomation_area"
                        style="@style/LyWHFourth"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="right"
                        android:hint="选择城市"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        style="@style/LyWHSecond"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shop_arrow"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    style="@style/LyWHSecond"
                    android:text="@string/person_signature"
                    android:textSize="16dp" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:gravity="center_vertical|right" >

                    <EditText
                        android:id="@+id/et_myinfomation_signature"
                        style="@style/LyWHFourth"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right"
                        android:hint="介绍下自己吧"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <TextView
                style="@style/VSpace"
                android:background="@color/bgall" />

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp" >

                <TextView
                    style="@style/LyWHSecond"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="@string/phone_number"
                    android:textSize="16dp" />

                <LinearLayout
                    style="@style/LyWHFourth"
                    android:gravity="center_vertical|right" >

                    <TextView
                        android:id="@+id/tv_myinfomation_phone_number"
                        style="@style/LyWHFourth"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right"
                        android:hint="填写手机号"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />
            <!--
            <LinearLayout
                android:id="@+id/ly_myinfomation_update_password"
                style="@style/LyWHFourth"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <TextView
                    style="@style/LyWHSecond"
                    android:text="@string/update_password"
                    android:textSize="16dp"/>
                <LinearLayout
                    style="@style/LyWHFourth"
                    android:gravity="center_vertical|right" >
                    <TextView
                        style="@style/LyWHFourth"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="right"
                        android:text="修改密码"
                        android:layout_marginRight="15dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            -->

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>