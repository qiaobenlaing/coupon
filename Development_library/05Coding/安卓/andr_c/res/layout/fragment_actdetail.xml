<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyCommSet" >

    <RelativeLayout
        android:id="@+id/rl_pay_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/backup" />

        <TextView
            style="@style/TvSet"
            android:layout_centerInParent="true"
            android:text="@string/act_detail_title"
            android:textColor="@color/white"
            android:textSize="@dimen/app_title_bar_font" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
		
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/iv_promotion_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_promotion_describle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="bottom"
                    android:text="我们准备在杭州搞一场最具有逼格的圣诞派对，你来么？"
                    android:background="@color/act_title_bg"
                    android:textColor="@color/white"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp" >

                <TextView
                    android:id="@+id/tv_promotion_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/gray_border"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/act_time"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_promotion_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_border"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/act_time" />
            </LinearLayout>
			<TextView style="@style/VLine"/>
            <TextView
                android:id="@+id/tv_book_vouchers"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/book_vouchers"
                android:textColor="@color/book_varchers_act"
                android:textSize="16sp" />

            <com.huift.hfq.base.view.MyListView
                android:id="@+id/lv_act"
                style="@style/LyWHFourth"
                android:divider="@color/shallow_gray"
                android:dividerHeight="0dp"
                android:scrollbars="@null" />

            <RelativeLayout
                android:id="@+id/ry_share_act"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/share_friend"
                    android:textColor="@color/home_font"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    style="@style/LyWHSecond"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/shop_arrow" />
            </RelativeLayout>
        </LinearLayout>
        </ScrollView>
        
        <include layout="@layout/comm_no_data"/>
    </FrameLayout>

</LinearLayout>