<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView 
            android:id="@+id/tv_shop_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time"
            android:text="08:00 - 22:00"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/tv_shop_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气：1000"/>
    </LinearLayout>
    
    <TextView 
        android:layout_marginTop="10dp"
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/address"
        android:layout_marginLeft="6dp"
        android:text="莲都区大洋路199号"
        android:drawablePadding="10dp"
        android:layout_marginBottom="10dp"/>
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	<LinearLayout 
   	    android:id="@+id/ll_recentvisit"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:padding="5dp"
   	    android:orientation="horizontal"
   	    android:gravity="center_vertical">
	   	<TextView 
	   	    android:layout_width="0dp"
	   	    android:layout_weight="1"
	   	    android:layout_height="wrap_content"
	   	    android:text="最近访客"
	   	    android:textSize="18sp"/>
	   	
	   	<ImageView 
	   	    android:id="@+id/visit_user1"
	   	    android:layout_width="36dp"
	   	    android:layout_height="36dp"
	   	    android:src="@drawable/activity"/>
	   	<ImageView 
	   	    android:id="@+id/visit_user2"
	   	    android:layout_width="36dp"
	   	    android:layout_height="36dp"
	   	    android:src="@drawable/activity"
	   	    android:layout_marginLeft="5dp"/>
	   	<ImageView 
	   	    android:id="@+id/visit_user3"
	   	    android:layout_width="36dp"
	   	    android:layout_height="36dp"
	   	    android:src="@drawable/activity"
	   	    android:layout_marginLeft="5dp"/>
	   	<ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/acticbc_arrows"
	   	    android:layout_marginLeft="10dp"/>
   	    
   	</LinearLayout>
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	
   	<LinearLayout 
   	    android:id="@+id/teadcher"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical">
   	    <LinearLayout 
   	        android:id="@+id/teadcher_line"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:padding="5dp"
	   	    android:orientation="horizontal"
	   	    android:gravity="center_vertical">
   	    	<TextView 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:text="名师堂"
   	    	    android:textSize="18sp"/>
   	    	
   	    	<ImageView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:src="@drawable/acticbc_arrows"
		   	    android:layout_marginLeft="10dp"/>
   	    </LinearLayout>
   	   	<View 
		    android:layout_width="match_parent"
		    android:layout_height="0.5dp"
		    android:background="@color/thin_gray"/>
   	   	 <LinearLayout 
   	   	    android:id="@+id/ll_shop_products"  
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:padding="5dp"
	   	    android:orientation="horizontal"
	   	    android:gravity="center_vertical">
   	    	<LinearLayout 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:orientation="vertical"
   	    	    android:gravity="center">
   	    	    <ImageView 
   	    	        android:id="@+id/iv_teacher_logo1"
   	    	        android:layout_width="72dp"
   	    	        android:layout_height="72dp"
   	    	        android:src="@drawable/home_other"/>
   	    	    <TextView 
   	    	        android:id="@+id/name_teacher_logo1"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="教师1"/>
   	    	    <TextView 
   	    	        android:id="@+id/type_teacher_logo1"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="数学"/>
   	    	</LinearLayout>
   	    	
   	    	 <LinearLayout 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:orientation="vertical"
   	    	    android:gravity="center">
   	    	    <ImageView 
   	    	        android:id="@+id/iv_teacher_logo2"
   	    	        android:layout_width="72dp"
   	    	        android:layout_height="72dp"
   	    	        android:src="@drawable/home_other"/>
   	    	    <TextView 
   	    	        android:id="@+id/name_teacher_logo2"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="教师2"/>
   	    	    <TextView 
   	    	        android:id="@+id/type_teacher_logo2"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="物理"/>
   	    	</LinearLayout>
   	    	
   	    	 <LinearLayout 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:orientation="vertical"
   	    	    android:gravity="center">
   	    	     <ImageView 
   	    	        android:id="@+id/iv_teacher_logo3"
   	    	        android:layout_width="72dp"
   	    	        android:layout_height="72dp"
   	    	        android:src="@drawable/home_other"/>
   	    	    <TextView 
   	    	        android:id="@+id/name_teacher_logo3"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="教师3"/>
   	    	    <TextView 
   	    	        android:id="@+id/type_teacher_logo3"
   	    	        android:layout_width="wrap_content"
   	    	        android:layout_height="wrap_content"
   	    	        android:text="化学"/>
   	    	</LinearLayout>
   	    	<!-- <ImageView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:src="@drawable/acticbc_arrows"
		   	    android:layout_marginLeft="10dp"/> -->
   	    </LinearLayout>
   	</LinearLayout>
   	<View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   	
   <LinearLayout 
       android:id="@+id/ll_edu_every_star"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:padding="5dp"
	   	    android:orientation="horizontal"
	   	    android:gravity="center_vertical">
   	    	<TextView 
   	    	    android:layout_width="0dp"
   	    	    android:layout_weight="1"
   	    	    android:layout_height="wrap_content"
   	    	    android:text="每日之星"
   	    	    android:textSize="18sp"/>
   	    	
   	    	<ImageView 
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="wrap_content"
		   	    android:src="@drawable/acticbc_arrows"
		   	    android:layout_marginLeft="10dp"/>
   	    </LinearLayout>
   	    
       <ImageView 
           android:id="@+id/iv_edu_every_start_head"
           android:layout_width="match_parent"
           android:layout_height="124dp"
           android:src="@drawable/no_message"/>
       <TextView 
           android:id="@+id/tv_edu_every_start_introduce"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:text="啊手机号发客户喝酒耍酒疯哈萨克回复可见阿加莎还打算结婚发卡行话费卡刷发"/>
   </LinearLayout>
   <View 
	    android:layout_width="match_parent"
	    android:layout_height="5dp"
	    android:background="@color/thin_gray"/>
   <LinearLayout 
     android:id="@+id/ll_edu_enrollment_plan"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     <LinearLayout 
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:padding="5dp"
  	    android:orientation="horizontal"
  	    android:gravity="center_vertical">
    	<TextView 
    	    android:layout_width="0dp"
    	    android:layout_weight="1"
    	    android:layout_height="wrap_content"
    	    android:text="招生启示"
    	    android:textSize="18sp"/>
 	    	
 	   <ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/acticbc_arrows"
	   	    android:layout_marginLeft="10dp"/>
 	  </LinearLayout>
 	    
     <ImageView 
         android:id="@+id/iv_edu_enrollment_plan"
         android:layout_width="match_parent"
         android:layout_height="124dp"
         android:src="@drawable/no_message"/>
     
 	</LinearLayout>

</LinearLayout>
