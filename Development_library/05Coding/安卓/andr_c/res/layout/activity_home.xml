<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.HomeActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomList" >

        <LinearLayout
            android:id="@+id/fragmentRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_set_net"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:layout_marginTop="48dp"
            android:background="@color/check_net"
            android:visibility="visible" >

            <TextView
                android:id="@+id/btn_set_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/check_net"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/btn_set_net"
                android:scaleType="centerInside"
                android:src="@drawable/acticbc_arrows" />
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/tv_new_register"
        style="@style/LyWHSecond"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/new_register" />

    <LinearLayout
        android:id="@+id/bottomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ly_main"
            style="@style/linear_bottom" >

            <ImageView
                android:id="@+id/rbtn_main"
                style="@style/LyWHSecond"
                android:background="@drawable/main_btn_1"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_main"
                style="@style/LyWHSecond"
                android:text="@string/main"
                android:textColor="@color/tab_fontnosel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_card"
            style="@style/linear_bottom" >

            <ImageView
                android:id="@+id/rbtn_card"
                style="@style/LyWHSecond"
                android:background="@drawable/main_btn_2"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_card"
                style="@style/LyWHSecond"
                android:text="@string/card_home"
                android:textColor="@color/tab_fontnosel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_home_coupon"
            style="@style/linear_bottom" >

            <ImageView
                android:id="@+id/rbtn_coupon"
                style="@style/LyWHSecond"
                android:background="@drawable/main_btn_3"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_coupon"
                style="@style/LyWHSecond"
                android:text="@string/coupon_home"
                android:textColor="@color/tab_fontnosel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_my"
            style="@style/linear_bottom" >

            <FrameLayout style="@style/LyWHSecond" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/rbtn_my"
                        style="@style/LyWHSecond"
                        android:background="@drawable/main_btn_4"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/my_msgpromt"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/shape_red_round"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_my"
                style="@style/LyWHSecond"
                android:text="@string/my_home"
                android:textColor="@color/tab_fontnosel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>