<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyCommSet" >

    <!-- <include layout="@layout/activity_status_bar"/> -->

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:background="@color/red"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/ly_area"
            style="@style/LyWHSecond"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_area"
                style="@style/LyWHSecond"
                android:layout_marginLeft="@dimen/navigation_left_r"
                android:text="@string/home_gps"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/iv_searchcity"
                style="@style/LyWHSecond"
                android:layout_marginLeft="2dp"
                android:background="@drawable/sel_city" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ry_serch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/iv_scan"
            android:layout_toRightOf="@+id/ly_area"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_search_left"
                style="@style/LyWHSecond"
                android:layout_height="35dp"
                android:background="@drawable/search_left"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/edt_search"
                style="@style/LyWHSecond"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/tv_search_left"
                android:background="@drawable/search_right"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left|center_vertical"
                android:hint="搜索店铺"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/activity_horizontal_margin" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/scan" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/index_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.huift.hfq.base.view.XListView
                android:id="@+id/lv_home"
                style="@style/LyWHFourth"
                android:divider="@color/shopdetail_divider"
                android:dividerHeight="0.5px"
                android:scrollbars="vertical" />
        </android.support.v4.widget.SwipeRefreshLayout>
	
        <LinearLayout
            android:id="@+id/ly_hometips"
            style="@style/LyWHFourth"
            android:background="@drawable/home_tips"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_hometips"
                style="@style/LyWHSecond"
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_tipsfont" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>