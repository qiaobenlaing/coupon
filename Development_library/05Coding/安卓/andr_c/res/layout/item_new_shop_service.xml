<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:padding="10dp">
    <ImageView 
        android:id="@+id/iv_service_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/home_other"
        android:layout_marginRight="10dp"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="72dp"
	    android:orientation="vertical"
	    android:gravity="center_vertical">
	    <TextView 
	        android:id="@+id/tv_service_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="商品名称"/>
	    
	    <TextView 
	        android:id="@+id/tv_service_des"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="商品简要描述"
	         android:layout_marginTop="10dp"
	        android:textSize="12sp"/>
	    
	   
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	         <TextView 
		        android:id="@+id/tv_service_price"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="￥46.00"
		        android:textColor="#DB5A03"/>
	         
	         <FrameLayout
	             android:id="@+id/fl_original_price"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="10dp"
	             android:layout_marginLeft="20dp">
	             <TextView 
	                 android:id="@+id/tv_orginal_price"
	                 android:layout_width="72dp"
	                 android:layout_height="wrap_content"
	                 android:text="原价120"
	                 android:textColor="#999999"
	                 android:gravity="center"/>
	             <View 
	                 android:layout_width="72dp"
	                 android:layout_height="0.1dp"
	                 android:background="#999999"
	                 android:layout_gravity="center_vertical"/>
	         </FrameLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
