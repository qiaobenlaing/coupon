<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/batch_app_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_coupon_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:id="@+id/fl_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_hide_coupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lheight"
                android:layout_below="@+id/fl_coupon"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:src="@drawable/hide_coupon" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
				
                <ImageView
                    android:id="@+id/iv_coupon_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/detail_deduct" />
				<TextView 
				    android:id="@+id/tv_user_couponnbr"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="0"
				    android:textColorLink="@color/red"
				    android:textColor="@color/white"
				    android:textSize="15sp"
				    android:layout_gravity="left|center_vertical"
				    android:layout_marginBottom="6dp"
				    android:layout_marginLeft="10dp"/>
				<TextView 
				    android:id="@+id/tv_refund"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/refund"
				    android:textColorLink="@color/red"
				    android:layout_gravity="right|center_vertical"
				    android:textColor="@color/white"
				    android:textSize="13sp"
				    android:background="@drawable/shape_batch_refund"
				    android:layout_marginBottom="6dp"
				    android:layout_marginRight="10dp"/>
				
                <ImageView
                    android:id="@+id/iv_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:scaleType="fitXY"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="30dp"
                    android:src="@drawable/batch_down" />
            </FrameLayout>
        </FrameLayout>
        <ImageView
            android:id="@+id/iv_bar_code"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:visibility="visible"
            android:layout_below="@+id/fl_coupon"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>