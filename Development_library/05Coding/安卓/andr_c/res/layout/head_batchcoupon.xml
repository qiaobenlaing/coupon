<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/batch_app_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            style="@style/LyWHFirst"
            android:layout_height="250dp"
            android:background="@drawable/no_message" />

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_gravity="center_vertical|bottom"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="5dp"
                android:minHeight="@dimen/layout_height"
                android:text="店铺名称"
                android:textColor="@color/shopdetail_title"
                android:textSize="@dimen/app_title_bar_font" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:background="@color/white"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="@string/popularity"
                    android:textColor="@color/shopdetail_content" />

                <TextView
                    android:id="@+id/tv_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|left"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="35dp"
                    android:text="@string/repeatcustomer"
                    android:textColor="@color/shopdetail_content"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_business_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="@string/business_date"
                android:textColor="@color/shopdetail_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_border"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/shop_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/ly_goto_shop"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/shopdetail_title"
            android:text="@string/goto_shop" />

        <ImageView
            android:id="@+id/iv_arrow"
            style="@style/LyWHSecond"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/shop_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/batch_total_money"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_batch_nber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:gravity="left"
            android:text="@string/batch_code"
            android:textColor="@color/shopdetail_content" />

        <TextView
            android:id="@+id/tv_deduct_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:gravity="right"
            android:textColor="@color/money_font"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>