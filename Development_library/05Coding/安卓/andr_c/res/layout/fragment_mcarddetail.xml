<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyCommSet"
    android:background="@color/white" >

    <include layout="@layout/common_title_commit" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            style="@style/LyWHFirst"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/LyWHFourth"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/ly_detai_card_style"
                    style="@style/LyWHFirst"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/set_silvercard" >

                    <LinearLayout
                        android:id="@+id/ly_content"
                        style="@style/LyWHFourth"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_detail_shoplogo"
                            style="@style/LyWHSecond"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/bg_border"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            style="@style/LyWHSecond"
                            android:layout_width="160dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:id="@+id/tv_detail_shopname"
                                style="@style/LyWHSecond"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LyWHFourth"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical|right" >

                            <TextView
                                android:id="@+id/tv_detail_cardname"
                                style="@style/LyWHSecond"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LyWHFourth"
                        android:layout_alignParentBottom="true" >

                        <TextView
                            style="@style/Tv_cardhome_center"
                            android:layout_below="@+id/ly_content"
                            android:text="@string/focus_integral"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_points"
                            style="@style/LyWHSecond"
                            android:layout_below="@+id/ly_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <LinearLayout
                            style="@style/LyWHFourth"
                            android:gravity="right" >

                            <TextView
                                android:id="@+id/tv_detail_cardno"
                                style="@style/Tv_cardhome_center"
                                android:layout_below="@+id/ly_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="20dp"
                                android:gravity="right"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/deep_gray" />

            <TextView
                style="@style/VSpace"
                android:layout_height="10dp"
                android:background="@color/app_bg" />

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <TextView
                    style="@style/LyWHSecond"
                    android:layout_marginLeft="3dp"
                    android:text="@string/full"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_focus_discountRequire"
                    style="@style/LyWHSecond"
                    android:layout_marginLeft="1dp"
                    android:text="1"
                    android:textColor="@color/point_color"
                    android:textSize="20sp" />

                <TextView
                    style="@style/LyWHSecond"
                    android:layout_marginLeft="3dp"
                    android:text="@string/will_enjoy"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <TextView
                style="@style/VSpace"
                android:layout_height="10dp"
                android:background="@color/app_bg" />

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/deep_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <TextView
                    style="@style/LyWHSecond"
                    android:text="特权"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/LyWHSecond"
                    android:background="@drawable/discount" />

                <TextView
                    style="@style/LyWHSecond"
                    android:layout_marginLeft="10dp"
                    android:text="@string/all_house"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_focus_mydiscount"
                    style="@style/LyWHSecond"
                    android:layout_marginLeft="1dp"
                    android:text="8.8折"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <TextView
                    style="@style/LyWHSecond"
                    android:layout_marginLeft="1dp"
                    android:text="@string/privilege"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                style="@style/VSpace"
                android:layout_height="10dp"
                android:background="@color/app_bg" />

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/deep_gray" />

            <LinearLayout
                style="@style/LyWHFourth"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:orientation="horizontal" >

                <TextView
                    style="@style/LyWHSecond"
                    android:text="其他"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                style="@style/VLine"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />
