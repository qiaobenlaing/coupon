<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFirst"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/LyWHFourth"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_shopLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_border"
            android:scaleType="fitXY" />

        <LinearLayout
            style="@style/LyWHSecond"
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical|left" >

            <TextView
                android:id="@+id/tv_act_name"
                style="@style/TvSet"
                android:layout_marginLeft="10dp"
                android:text="味千拉面"
                android:textColor="@color/tv_shopname_color"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:textColor="@color/dove_color" >

            <TextView
                android:id="@+id/tv_distance"
                style="@style/TvSet"
                android:text="xxx"
                android:textColor="@color/dove_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/LyWHFourth"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/silvery_white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_actLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_border"
            android:scaleType="fitXY" />

        <LinearLayout
            style="@style/LyWHSecond"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:maxLines="2"
                android:text="xxxxxxxxxxxxxxxxxxxxxxxxxx"
                android:textColor="@color/tv_content_color" />
        </LinearLayout>

        <LinearLayout
            style="@style/LyWHFourth"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/acticbc_arrows" />
        </LinearLayout>
    </LinearLayout>
    <!--
         <TextView style="@style/VLine"
        android:layout_height="0.5dp"
        android:background="@color/very_gray"/>
    -->

</LinearLayout>