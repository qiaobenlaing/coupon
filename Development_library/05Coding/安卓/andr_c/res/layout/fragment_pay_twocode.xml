<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgall" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rl_pay_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_bar"
            android:layout_alignParentTop="true"
            android:background="@color/red"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/backup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@drawable/backup" />

            <TextView
                style="@style/TvSet"
                android:layout_centerInParent="true"
                android:text="@string/my_pay_two_code"
                android:textColor="@color/white"
                android:textSize="@dimen/app_title_bar_font" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_pay_two_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_pay_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/shape_radian_border"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_paytwocode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:id="@+id/ly_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_paytwocode"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/tv_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/refresh"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/auto_refresh" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/default_pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_pay_way"
            android:layout_below="@+id/ly_pay_two_code"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:text="@string/default_pay_way"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_pay_way"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_border" >

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/icbc_card" />

            <TextView
                android:id="@+id/tv_icbc_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:layout_toRightOf="@+id/tv_bank_name"
                android:text="*************" />

            <ImageView
                android:id="@+id/iv_arrow"
                style="@style/LyWHSecond"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/shop_arrow" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_big_paytwocode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_big_paytwocode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_no_bank_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/navigation_bar"
        android:background="@color/bgall">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_hui_pay_title"
            android:textSize="18sp"/>
        <Button 
            android:id="@+id/open_hui_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/open_hui_pay"
            android:textColor="@color/white"
            android:background="@drawable/login_btn"/>
    </LinearLayout>

</FrameLayout>