<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet"
    android:background="@color/bgall" >

    <include
        android:id="@+id/ly_head"
        layout="@layout/common_title_message" />

    <RelativeLayout
        android:id="@+id/ry_two_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/ly_head"
        android:background="@color/white" >

        <RadioGroup
            android:id="@+id/rg_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fadingEdge="none"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbtn_photo_product"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="-1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_card_left"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="产品"
                android:textColor="@drawable/selector_radio_card_checked_font" />

            <RadioButton
                android:id="@+id/rbtn_photo_environment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_card_right"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:text="环境"
                android:textColor="@drawable/selector_radio_card_checked_font" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_cardlist_content"
        style="@style/LyWHFourth"
        android:layout_below="@+id/ry_two_title"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>