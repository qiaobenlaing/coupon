<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyWHFourth"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ly_shopdetail"
        style="@style/LyWHFourth"
        android:background="@drawable/shape_shopbg" >

        <RelativeLayout
            android:id="@+id/ly_shopinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/ly_iamgeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/shopImage"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food" />

                <ImageView
                    android:id="@+id/iv_isnew"
                    style="@style/LyWHSecond"
                    android:layout_gravity="top|left"
                    android:background="@drawable/new_top" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/ly_allcontent"
                style="@style/LyWHFourth"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/ly_iamgeView"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_shopInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/icbc_discount" >

                    <RelativeLayout
                        android:id="@+id/ly_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/shopName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:singleLine="true"
                            android:text="外婆家顶顶dd"
                            android:textColor="@color/shop_namefont"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/shopName" >

                            <ImageView
                                android:id="@+id/iv_icbc"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/icbc_logo" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/rl_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ly_shop_name"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/ly_home_benefit"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_home_benefit"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/tv_home_benefit"
                                style="@style/btn_shop"
                                android:paddingBottom="1dp"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp"
                                android:text="@string/home_benefit"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_home_act"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_home_act"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/tv_home_act"
                                style="@style/btn_shop"
                                android:paddingBottom="1dp"
                                android:paddingLeft="1dp"
                                android:paddingRight="1dp"
                                android:text="@string/home_act"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/street"
                        style="@style/LyWHSecond"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/rl_label"
                        android:layout_marginTop="2dp"
                        android:layout_toLeftOf="@+id/distance"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="xxxxxx"
                        android:textColor="@color/shop_nameother"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/icbc_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="8折"
                        android:textColor="@color/coupondetail_font"
                        android:textSize="30sp" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/LyWHFourth"
                    android:layout_below="@+id/rl_shopInfo"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:id="@+id/tv_shop_type"
                        style="@style/LyWHSecond"
                        android:layout_alignParentLeft="true"
                        android:text="美食"
                        android:textColor="@color/shop_nameother"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_popularity"
                        style="@style/LyWHSecond"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@+id/distance"
                        android:layout_toRightOf="@+id/tv_shop_type"
                        android:text="@string/popularity"
                        android:textColor="@color/shop_nameother"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="12Km"
                        android:textColor="@color/dove_color"
                        android:textSize="13sp"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>