<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_xsheight"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_listuser_image"
            android:layout_width="@dimen/layout_lheight"
            android:layout_height="@dimen/layout_lheight"
            android:layout_gravity="center"
            android:background="@drawable/bg_border"
            android:scaleType="fitXY"
            android:src="@drawable/activityimage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 活动编码 -->

                <TextView
                    android:id="@+id/tv_activityCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                <!-- 用户活动编码 -->

                <TextView
                    android:id="@+id/tv_listuser_activityCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- 活动标题 -->

                <TextView
                    android:id="@+id/tv_listuser_theam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/actmycontent_title"
                    android:textSize="18dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <!-- 活动的店铺名称 -->

                <TextView
                    android:id="@+id/tv_listuser_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/actmycontent_name"
                    android:textColor="@color/coupon_hometopfont" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_listuser_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100Km"
                    android:textColor="@color/msg_font" />

                <TextView
                    android:id="@+id/tv_listuser_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_listuser_distance"
                    android:gravity="center"
                    android:text="2015.08.20"
                    android:textColor="@color/msg_font" />

                <TextView
                    android:id="@+id/tv_listuser_enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="200报名"
                    android:textColor="@color/msg_font" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>