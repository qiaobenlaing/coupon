<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">
    <include
        android:id="@+id/top" 
        layout="@layout/common_title_commit"/>
    <LinearLayout
        android:id="@+id/ll_set_no_paypwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
       android:visibility="gone"
      	android:gravity="center_horizontal"
      	android:layout_below="@id/top">
      	
        <TextView 
            android:id="@+id/tv_set_paypwd_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:orientation="horizontal" 
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/tv_iden_get"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_back"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/myhome_addbank_again" 
                android:textSize="16sp"
                android:textColor="@color/gray"/>
            <EditText
                android:id="@+id/et_iden_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/tv_iden_get"
                android:background="@null"
                android:hint="@string/hint_input_indentify_code"
                android:inputType="number" />
        </RelativeLayout>
        <Button 
            android:id="@+id/btn_iden_check"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/login_btn"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*300元内支付免银行短信验证"
            android:layout_gravity="left"
            android:textColor="@color/red"
            android:layout_marginTop="5dp"/>
	</LinearLayout>
	
    <LinearLayout 
        android:id="@+id/ll_set_yes_paypwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_below="@id/top">
        <LinearLayout 
            android:id="@+id/ll_change_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/app_item_bg">
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="修改支付密码"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_arrow"
                android:layout_gravity="right"/>
        </LinearLayout>
        
         <LinearLayout 
            android:id="@+id/ll_forget_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/app_item_bg"
            android:layout_marginTop="5dp">
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="忘记支付密码"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_arrow"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
	
    <LinearLayout 
        android:id="@+id/ll_input_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_below="@id/top">
        <TextView
            android:id="@+id/tv_input_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置惠圈支付密码"/>
        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/gvpwd_input_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/ll_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_below="@id/top">
        <TextView
            android:id="@+id/tv_confirm_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请再次输入惠圈支付密码"/>
        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/gvpwd_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/ll_check_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_below="@id/top">
        <TextView
            android:id="@+id/tv_check_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入原来的惠圈支付密码"/>
        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/gvpwd_check_pwd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</RelativeLayout>
