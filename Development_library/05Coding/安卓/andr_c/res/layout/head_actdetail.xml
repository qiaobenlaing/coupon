<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet_" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp" >

        <ImageView
            android:id="@+id/iv_promotion_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_promotion_describle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:background="@color/act_title_bg"
            android:text="我们准备在杭州搞一场最具有逼格的圣诞派对，你来么？"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp" >

        <TextView
            android:id="@+id/tv_promotion_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/act_time"
            android:visibility="gone"
            android:background="@drawable/gray_border" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_promotion_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/act_time"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/gray_border" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_book_vouchers"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/book_vouchers" 
        android:gravity="center_vertical"
        android:textColor="@color/book_varchers_act"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"/>

</LinearLayout>