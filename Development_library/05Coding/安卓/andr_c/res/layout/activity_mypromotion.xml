<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyOutSet" >

    <include layout="@layout/common_title_commit" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:background="@color/white" >

        <RadioGroup
            android:id="@+id/rg_promotion_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fadingEdge="none"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <RadioButton
                android:id="@+id/rb_process"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_red_border"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="进行中"/>

            <RadioButton
                android:id="@+id/rb_finish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="已完成"
                android:layout_marginLeft="10dp"/>
             <RadioButton
               	android:id="@+id/rb_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="收藏"
                android:layout_marginLeft="10dp"/>
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_promotion_content"
        style="@style/LyWHFirst"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>