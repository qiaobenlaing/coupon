<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg" >
    
    <include layout="@layout/common_title_commit" />
    
    <TextView
        android:id="@+id/tv_promotion_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_item_bg"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="18sp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_item_bg"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
        	android:background="@color/gray_version"
        	android:layout_marginBottom="5dp"/>
        <ListView 
           	android:id="@+id/lv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:cacheColorHint="@color/white" 
            android:listSelector="@color/white">
        </ListView>
      	<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
        	android:background="@color/gray_version"
        	android:layout_marginBottom="5dp"/>
      	
      	<RelativeLayout 
      	    android:layout_width="match_parent"
      	    android:layout_height="wrap_content">
      	    <TextView 
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content"
      	        android:text="订单价格"/>
      	    
      	    <TextView 
      	        android:id="@+id/tv_total_money"
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content"
      	        android:layout_alignParentRight="true"/>
      	    
      	    <TextView 
      	        android:layout_width="wrap_content"
      	        android:layout_height="wrap_content"
      	        android:text="￥"
      	        android:layout_toLeftOf="@id/tv_total_money"/>
      	</RelativeLayout>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_item_bg"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人信息"/>
        
       	<LinearLayout 
       	    android:layout_marginTop="10dp"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:orientation="horizontal">
       	    <EditText 
       	        android:id="@+id/et_promotion_name"
       	        android:layout_width="0dp"
       	        android:layout_weight="1"
       	        android:layout_height="wrap_content"
       	        android:background="@drawable/red_border"
       	        android:hint="预定人姓名"
       	        android:textSize="16sp"
       	        android:padding="5dp"/>
       	    <EditText 
       	        android:id="@+id/et_promotion_phone"
       	        android:layout_width="0dp"
       	        android:layout_weight="1"
       	        android:layout_height="wrap_content"
       	        android:background="@drawable/red_border"
       	        android:layout_marginLeft="20dp"
       	        android:hint="有效手机号"
       	        android:textSize="16sp"
       	        android:padding="5dp"
       	        android:inputType="phone"/>
       	</LinearLayout>
    </LinearLayout>
    
    <LinearLayout
         android:id="@+id/ly_plat_bouns"
         android:layout_width="match_parent"
         android:layout_height="@dimen/layout_height"
         android:gravity="center_vertical"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginTop="5dp"
         android:background="@color/app_item_bg"
         android:visibility="gone">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/huiquan_bouns"
             android:textColor="@color/deep_textcolor" />

         <EditText
             android:id="@+id/platform_bounsprice"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@color/white"
             android:gravity="center"
             android:hint="@string/num_zero"
             android:inputType="numberDecimal"
             android:maxLength="6"
             android:paddingLeft="10dp"
             android:textColor="@color/red"
             android:textColorHint="@color/red" />

         <TextView
             android:id="@+id/platform_bounsmoeny"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="1dp"
             android:text="@string/money_unit"
             android:textColor="@color/deep_textcolor" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:text="@string/platbouns"
             android:textColor="@color/tv_content_color" />

         <TextView
             android:id="@+id/plat_canbouns"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="1dp"
             android:layout_marginRight="1dp"
             android:text="@string/num_zero"
             android:textColor="@color/tv_content_color" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/money_unit"
             android:textColor="@color/tv_content_color" />
    </LinearLayout>
    
    <LinearLayout
	   android:id="@+id/ly_shop_bouns"
	   android:layout_width="match_parent"
	   android:layout_height="@dimen/layout_height"
	   android:gravity="center_vertical"
	   android:paddingLeft="10dp"
	   android:paddingRight="10dp"
	   android:layout_marginTop="5dp"
       android:background="@color/app_item_bg"
       android:visibility="gone">
	
	   <TextView
	       android:id="@+id/left_three"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="@string/shop_bouns"
	       android:textColor="@color/deep_textcolor" />
	
	   <EditText
	       android:id="@+id/shop_bounsprice"
	       android:layout_width="0dp"
	       android:layout_height="wrap_content"
	       android:layout_weight="1"
	       android:background="@color/white"
	       android:gravity="center"
	       android:hint="@string/num_zero"
	       android:inputType="numberDecimal"
	       android:maxLength="6"
	       android:paddingLeft="10dp"
	       android:textColor="@color/red"
	       android:textColorHint="@color/red" />
	
	   <TextView
	       android:id="@+id/shop_bounspricemoney"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="1dp"
	       android:text="@string/money_unit"
	       android:textColor="@color/deep_textcolor" />
	
	   <TextView
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="10dp"
	       android:text="@string/shopbouns"
	       android:textColor="@color/tv_content_color" />
	
	   <TextView
	       android:id="@+id/shop_canbouns"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="1dp"
	       android:layout_marginRight="1dp"
	       android:text="@string/num_zero"
	       android:textColor="@color/tv_content_color" />
	
	   <TextView
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="@string/money_unit"
	       android:textColor="@color/tv_content_color" />
    </LinearLayout>
    <Button 
  	    android:id="@+id/btn_promotion_buy"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:text="@string/btn_icbc_pay"
  	    android:background="@drawable/login_btn"
  	    android:layout_gravity="bottom"
  	    android:layout_margin="10dp"
  	    android:textColor="@color/white"/>
</LinearLayout>
