<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/iv_item_teacher_head"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:src="@drawable/no_message"/>
	<RelativeLayout 
	    android:layout_width="0dp"
	    android:layout_weight="2"
	    android:layout_height="match_parent">
	    <TextView 
	        android:id="@+id/tv_item_teacher_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="教师名称"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"/>
	    
	    <TextView 
	        android:id="@+id/tv_item_teacher_class"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="科目"
	        android:layout_toRightOf="@id/tv_item_teacher_name"
	        android:layout_alignTop="@id/tv_item_teacher_name"
	        android:layout_marginLeft="20dp"/>
	    
	    <TextView 
	        android:id="@+id/tv_item_teacher_level"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_item_teacher_name"
	        android:layout_alignLeft="@+id/tv_item_teacher_name"
	        android:text="教师级别"
	        android:layout_marginTop="20dp"/>
	    
	    <TextView 
	        android:id="@+id/tv_item_teacher_introduce"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_below="@id/tv_item_teacher_level"
	        android:text="教师简介我撒谎都数据库的贺卡实践活动课撒娇客户端卡"
	        android:layout_marginTop="10dp"/>
	    
	</RelativeLayout>
</LinearLayout>
