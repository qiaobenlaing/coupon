<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<ImageView 
		    android:id="@+id/iv_promotion_icon"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:scaleType="fitXY"/>
		 <TextView 
	        android:id="@+id/tv_promotion_describle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="我们准备在杭州搞一场最具有逼格的圣诞派对，你来么？"
	        android:textSize="16sp"
	        android:padding="5dp"
	        android:layout_alignParentBottom="true"
	        android:background="@color/act_title_bg"
	        android:textColor="@color/white"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">
        <TextView 
            android:id="@+id/tv_promotion_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/act_time"
            android:background="@drawable/gray_border"/>
        <TextView 
		    android:id="@+id/tv_promotion_status"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:paddingLeft="5dp"
            android:paddingRight="5dp"
		    android:textColor="@color/act_time"
		    android:background="@drawable/gray_border"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView 
            android:id="@+id/tv_promotion_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/act_time"
            android:background="@drawable/gray_border"/>
    </LinearLayout>
</LinearLayout>
