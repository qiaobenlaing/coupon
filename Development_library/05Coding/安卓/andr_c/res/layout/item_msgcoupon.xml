<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/couponlist_center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_couponimg"
        style="@style/LyWHSecond"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/couponlist_left"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/iv_couponimg"
            style="@style/LyWHSecond"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/home_food" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_centermsg"
        style="@style/LyWHSecond"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ly_couponimg"
        android:layout_toRightOf="@+id/ly_couponimg"
        android:background="@drawable/couponlist_center"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msg_coupontime"
            style="@style/LyWHSecond"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="时间"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/msg_couponname"
            style="@style/LyWHSecond"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/msg_coupontime"
            android:layout_toStartOf="@id/msg_coupontime"
            android:singleLine="true"
            android:text="味千拉面"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/msg_couponcon"
            style="@style/LyWHSecond"
            android:layout_below="@id/msg_couponname"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="向你要XXX商户优惠券两张"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>