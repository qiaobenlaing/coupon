<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LyCommSet" >

    <RelativeLayout
        android:id="@+id/rl_pay_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:layout_alignParentTop="true"
        android:background="@color/red"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/backup" />

        <TextView
            style="@style/TvSet"
            android:layout_centerInParent="true"
            android:text="@string/refund_title"
            android:textColor="@color/white"
            android:textSize="@dimen/app_title_bar_font" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_acttype"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/refund_act_type"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/iv_refund_status"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/refund_status" />

                    <TextView
                        android:id="@+id/tv_refund_status"
                        style="@style/LyWHFourth"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_refund_status"
                        android:text="@string/refund_status" />

                    <TextView
                        android:id="@+id/tv_refund_explan"
                        style="@style/tvActRefund"
                        android:layout_alignLeft="@+id/tv_refund_status"
                        android:layout_below="@+id/tv_refund_status"
                        android:text="@string/refund_explain" />

                    <TextView
                        android:id="@+id/tv_order_code"
                        style="@style/tvActRefund"
                        android:layout_alignLeft="@+id/tv_refund_explan"
                        android:layout_below="@+id/tv_refund_explan"
                        android:text="@string/refund_order_code" />

                    <TextView
                        android:id="@+id/tv_tel_complaints"
                        style="@style/tvActRefund"
                        android:layout_alignLeft="@+id/tv_order_code"
                        android:layout_below="@+id/tv_order_code"
                        android:text="@string/tel_complaints" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_height"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/tv_refund_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/refund_price" />

                    <TextView
                        android:id="@+id/tv_refund_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ckb_arrow"
                        android:text="0元" />

                    <CheckBox
                        android:id="@+id/ckb_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@null"
                        android:drawableLeft="@drawable/down_arrow"
                        android:paddingBottom="10dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="10dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_order_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        style="@style/VLine"
                        android:layout_marginBottom="5dp" />

                    <RelativeLayout
                        android:id="@+id/rl_bank_card"
                        style="@style/rlActRefundPrice" >

                        <TextView
                            android:id="@+id/tv_bank_price_title"
                            style="@style/tvActRefundPrice"
                            android:layout_alignParentLeft="true"
                            android:text="@string/icbc_card" />

                        <TextView
                            android:id="@+id/tv_bank_price"
                            style="@style/tvActRefundPrice"
                            android:layout_alignParentRight="true"
                            android:paddingRight="10dp"
                            android:text="0元" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_huiquan_bouns"
                        style="@style/rlActRefundPrice" >

                        <TextView
                            android:id="@+id/tv_huiquan_bouns_title"
                            style="@style/tvActRefundPrice"
                            android:layout_alignParentLeft="true"
                            android:text="@string/huiquan_bouns" />

                        <TextView
                            android:id="@+id/tv_huiquan_bouns"
                            style="@style/tvActRefundPrice"
                            android:layout_alignParentRight="true"
                            android:paddingRight="10dp"
                            android:text="0元" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_shop_bouns"
                        style="@style/rlActRefundPrice" >

                        <TextView
                            android:id="@+id/tv_shop_bouns_title"
                            style="@style/tvActRefundPrice"
                            android:layout_alignParentLeft="true"
                            android:text="@string/shop_bouns" />

                        <TextView
                            android:id="@+id/tv_shop_bouns"
                            style="@style/tvActRefundPrice"
                            android:layout_alignParentRight="true"
                            android:paddingRight="10dp"
                            android:text="0元" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/layout_height"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/select_refun_complaints" />

                    <TextView style="@style/VLine" />

                    <com.huift.hfq.base.view.MyListView
                        android:id="@+id/lv_refund"
                        style="@style/LyWHFourth"
                        android:divider="@color/shallow_gray"
                        android:dividerHeight="0dp"
                        android:scrollbars="@null" />

                    <EditText
                        android:id="@+id/edt_refund_other"
                        style="@style/edtActRefundSuggest"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_refund"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape_gray_btn"
                        android:text="@string/confirm_refund"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/prog_nodata"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_progress"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>