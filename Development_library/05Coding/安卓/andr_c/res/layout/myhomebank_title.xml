<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NavigationTopBar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/iv_bank_function_backup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/backup" />
    <!-- android:src="@drawable/saomiao_back" -->

    <TextView
        android:id="@+id/tv_bank_function_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="功能描述"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_bank_function_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/add"
        android:visibility="gone" />



</RelativeLayout>