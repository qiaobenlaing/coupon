<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar"
        android:background="@color/red"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_area"
            style="@style/LyWHSecond"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/navigation_left"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_turn"
            style="@style/LyWHSecond"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/navigation_left"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/ry_serch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <!--
                     <TextView
		            android:id="@+id/tv_search_left"
		            style="@style/LyWHSecond"
		            android:layout_height="35dp"
		            android:background="@drawable/search_left"
		            android:gravity="center_vertical|center_horizontal"
		            android:textColor="@color/white"/>
            -->

            <TextView
                android:id="@+id/edt_search"
                style="@style/LyWHSecond"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:hint="体验馆"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <WebView
        android:id="@+id/lv_webview"
        style="@style/LyWHFirst"
        android:divider="@null" />

</LinearLayout>